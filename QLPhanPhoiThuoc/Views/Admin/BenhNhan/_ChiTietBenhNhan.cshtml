@model QLPhanPhoiThuoc.Models.Entities.BenhNhan

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title">
        <i class="fas fa-user-circle me-2"></i>
        Chi tiết bệnh nhân
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    @if (Model != null)
    {
            <div class="row">
                <div class="col-md-12 mb-4 text-center">
                    <div class="avatar-lg mx-auto mb-3" style="width: 100px; height: 100px;">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 100%; height: 100%; font-size: 3rem;">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                    <h4 class="mb-1">@Model.TenBenhNhan</h4>
                    <p class="text-muted mb-0">Mã bệnh nhân: <strong>@Model.MaBenhNhan</strong></p>
                </div>

                <div class="col-md-6">
                    <div class="info-group mb-3">
                        <label class="text-muted small mb-1">
                            <i class="fas fa-id-card me-2"></i>Số CCCD
                        </label>
                        <p class="fw-bold mb-0">@(Model.CCCD ?? "Chưa cập nhật")</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-group mb-3">
                        <label class="text-muted small mb-1">
                            <i class="fas fa-phone me-2"></i>Số điện thoại
                        </label>
                        <p class="fw-bold mb-0">@(Model.SoDienThoai ?? "Chưa cập nhật")</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-group mb-3">
                        <label class="text-muted small mb-1">
                            <i class="fas fa-birthday-cake me-2"></i>Ngày sinh
                        </label>
                        <p class="fw-bold mb-0">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-group mb-3">
                        <label class="text-muted small mb-1">
                            <i class="fas fa-venus-mars me-2"></i>Giới tính
                        </label>
                        <p class="fw-bold mb-0">
                        @if (Model.GioiTinh == "Nam")
                        {
                                    <span class="badge bg-info">Nam</span>
                        }
                        else if (Model.GioiTinh == "Nữ")
                        {
                                    <span class="badge bg-danger">Nữ</span>
                        }
                        else
                        {
                                    <span>Chưa cập nhật</span>
                        }
                        </p>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="info-group mb-3">
                        <label class="text-muted small mb-1">
                            <i class="fas fa-envelope me-2"></i>Email
                        </label>
                        <p class="fw-bold mb-0">@(Model.Email ?? "Chưa cập nhật")</p>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="info-group mb-3">
                        <label class="text-muted small mb-1">
                            <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ
                        </label>
                        <p class="fw-bold mb-0">@(Model.DiaChi ?? "Chưa cập nhật")</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-group mb-3">
                        <label class="text-muted small mb-1">
                            <i class="fas fa-heartbeat me-2"></i>Trạng thái
                        </label>
                        <p class="fw-bold mb-0">
                        @if (Model.TrangThai == "DangDieuTri")
                        {
                                    <span class="badge bg-success">Đang điều trị</span>
                        }
                        else if (Model.TrangThai == "DaRaVien")
                        {
                                    <span class="badge bg-secondary">Đã ra viện</span>
                        }
                        else
                        {
                                    <span class="badge bg-info">@Model.TrangThai</span>
                        }
                        </p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-group mb-3">
                        <label class="text-muted small mb-1">
                            <i class="fas fa-calendar-plus me-2"></i>Ngày tạo
                        </label>
                        <p class="fw-bold mb-0">@(Model.NgayTao.ToString("dd/MM/yyyy HH:mm") ?? "Chưa cập nhật")</p>
                    </div>
                </div>
            </div>
    }
    else
    {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Không tìm thấy thông tin bệnh nhân!
            </div>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="fas fa-times me-2"></i>Đóng
    </button>
    <button type="button" class="btn btn-warning" onclick="editPatient('@Model.MaBenhNhan')">
        <i class="fas fa-edit me-2"></i>Chỉnh sửa
    </button>
</div>

<style>
    .info-group {
        padding: 10px;
        background: #f8f9fa;
        border-radius: 8px;
    }
</style>