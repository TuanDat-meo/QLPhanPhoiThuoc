        // ==================== CONTENT LOADERS ====================

        function loadContent(url, sectionId) {
            console.log(`üöÄ Loading content: ${url} into section: ${sectionId}`);

            // Ki·ªÉm tra n·∫øu l√† Details/Edit/Create -> M·ªü Panel
            if (url.includes('/Details/') || url.includes('/Edit/') || url.includes('/Create')) {
                let title = "Th√¥ng tin";
                let icon = "fas fa-file";

                if (url.includes('NhaCungCap')) {
                    title = "Nh√† cung c·∫•p";
                    icon = "fas fa-truck";
                } else if (url.includes('Thuoc')) {
                    title = "Thu·ªëc";
                    icon = "fas fa-pills";
                } else if (url.includes('BenhNhan')) {
                    title = "B·ªánh nh√¢n";
                    icon = "fas fa-user-injured";
                } else if (url.includes('NhanVien')) {
                    title = "Nh√¢n vi√™n";
                    icon = "fas fa-users";
                }

                openPanel(url, title, icon);
                return;
            }

            // N·∫øu kh√¥ng ph·∫£i panel, load v√†o section
            showLoading();
            showSection(sectionId);

            $.ajax({
                url: url,
                method: 'GET',
                headers: { 'X-Requested-With': 'XMLHttpRequest' },
                success: function (data) {
                    const $section = $('#' + sectionId);
                    $section.html(data);

                    // QUAN TR·ªåNG: Apply styles v√† execute scripts
                    applyInlineStyles($section);
                    executeScripts($section);

                    hideLoading();
                },
                error: function (xhr, status, error) {
                    console.error(`‚ùå Error loading ${url}:`, error);
                    $('#' + sectionId).html(
                        '<div class="alert alert-danger" style="margin: 20px;">' +
                        '<h4><i class="fas fa-exclamation-triangle"></i> L·ªói t·∫£i d·ªØ li·ªáu</h4>' +
                        '<p><strong>Chi ti·∫øt:</strong> ' + error + '</p>' +
                        '<button class="btn btn-primary" onclick="loadContent(\'' + url + '\', \'' + sectionId + '\')">Th·ª≠ l·∫°i</button>' +
                        '</div>'
                    );
                    hideLoading();
                }
            });
        }

