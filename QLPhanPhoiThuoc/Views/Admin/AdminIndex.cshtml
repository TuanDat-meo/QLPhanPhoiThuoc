@{
    ViewData["Title"] = "Trang quản trị";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var chucVu = ViewBag.ChucVu ?? "Quản trị viên";
    var tenNhanVien = ViewBag.TenNhanVien ?? "Admin";
    var maNhanVien = ViewBag.MaNhanVien ?? "";
    var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Admin";
}

<style>
    /* ==================== OPTIMIZED STYLES - NO LAG ==================== */
    
    /* Disable expensive animations on load */
    .admin-container {
        display: flex;
        gap: 20px;
        min-height: calc(100vh - 200px);
        will-change: auto; /* Remove will-change to reduce GPU usage */
    }

    /* Welcome Banner - Simplified */
    .welcome-banner {
        background: linear-gradient(135deg, #1e3a5f 0%, #0f2847 100%);
        color: white;
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(30, 58, 95, 0.3);
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: opacity 0.3s ease, max-height 0.3s ease;
        opacity: 1;
        max-height: 100px;
        overflow: hidden;
    }
        .welcome-banner h3{
            color: white;
        }
    .welcome-banner.hidden {
        opacity: 0;
        max-height: 0;
        margin-bottom: 0;
        padding: 0;
    }

    .welcome-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .welcome-icon {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
    }

    .welcome-text h3 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .welcome-text p {
        margin: 5px 0 0;
        opacity: 0.9;
        font-size: 0.95rem;
    }

    .welcome-close {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        cursor: pointer;
        transition: background 0.2s;
    }

    .welcome-close:hover {
        background: rgba(255, 255, 255, 0.3);
    }

    /* Sidebar - Fixed với scrollbar */
    .sidebar {
        width: 280px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.08);
        padding: 20px 0;
        height: fit-content;
        max-height: calc(100vh - 120px);
        overflow-y: auto; /* Thêm scrollbar khi cần */
        position: sticky;
        top: 90px;
    }

    /* Custom scrollbar cho sidebar */
    .sidebar::-webkit-scrollbar {
        width: 6px;
    }

    .sidebar::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .sidebar::-webkit-scrollbar-thumb {
        background: #1e3a5f;
        border-radius: 10px;
    }

    .sidebar::-webkit-scrollbar-thumb:hover {
        background: #0f2847;
    }

    .sidebar-header {
        padding: 0 20px 20px;
        border-bottom: 2px solid #f0f0f0;
        margin-bottom: 20px;
    }

    .sidebar-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }

    .sidebar-subtitle {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .menu-section {
        margin-bottom: 25px;
    }

    .menu-section-title {
        padding: 10px 20px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #6c757d;
        letter-spacing: 0.5px;
    }

    .menu-item {
        padding: 12px 20px;
        color: #495057;
        text-decoration: none;
        display: flex;
        align-items: center;
        transition: background 0.2s, color 0.2s;
        border-left: 3px solid transparent;
        cursor: pointer;
    }

    .menu-item:hover {
        background: #f8f9fa;
        color: #1e3a5f;
        border-left-color: #1e3a5f;
        text-decoration: none;
    }

    .menu-item.active {
        background: linear-gradient(90deg, rgba(30,58,95,0.1) 0%, transparent 100%);
        color: #1e3a5f;
        border-left-color: #1e3a5f;
        font-weight: 600;
    }

    .menu-item i {
        width: 25px;
        margin-right: 12px;
        text-align: center;
        font-size: 1.1rem;
    }

    /* Dashboard Content */
    .dashboard-content {
        flex: 1;
        min-width: 0; /* Prevent flex overflow */
    }

    /* Stats Cards - Simplified hover */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.08);
        display: flex;
        align-items: center;
        gap: 20px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .stat-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 25px rgba(0,0,0,0.15);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        color: white;
        flex-shrink: 0;
    }

    .stat-icon.primary {
        background: linear-gradient(135deg, #1e3a5f 0%, #0f2847 100%);
    }

    .stat-icon.success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }

    .stat-icon.warning {
        background: linear-gradient(135deg, #f59e0b 0%, #fb923c 100%);
    }

    .stat-icon.info {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .stat-icon.danger {
        background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
    }

    .stat-details {
        flex: 1;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e3a5f;
        line-height: 1;
    }

    .stat-label {
        color: #6c757d;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    /* Charts - FIXED HEIGHT */
    .charts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .chart-card {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.08);
    }

    .chart-card h5 {
        margin-bottom: 20px;
        color: #333;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .chart-container {
        position: relative;
        height: 300px; /* FIXED HEIGHT */
        width: 100%;
    }

    /* Card Components */
    .card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.08);
        margin-bottom: 20px;
        overflow: hidden;
    }

    .card-header {
        padding: 20px 25px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-bottom: 1px solid #dee2e6;
    }

    .card-body {
        padding: 25px;
    }

    /* Activity Items */
    .activity-item {
        display: flex;
        gap: 15px;
        padding: 15px;
        border-bottom: 1px solid #f0f0f0;
        transition: background 0.2s;
    }

    .activity-item:hover {
        background: #f8f9fa;
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #1e3a5f 0%, #0f2847 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .activity-content {
        flex: 1;
    }

    .activity-text {
        font-weight: 500;
        color: #333;
        margin-bottom: 5px;
    }

    .activity-time {
        font-size: 0.85rem;
        color: #6c757d;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .admin-container {
            flex-direction: column;
        }

        .sidebar {
            width: 100%;
            max-height: none;
            position: relative;
            top: 0;
        }

        .charts-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

