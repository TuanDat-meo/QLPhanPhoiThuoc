    }

    .sidebar-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }

    .sidebar-subtitle {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .menu-section {
        margin-bottom: 25px;
    }

    .menu-section-title {
        padding: 10px 20px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #6c757d;
        letter-spacing: 0.5px;
    }

    .menu-item {
        padding: 12px 20px;
        color: #495057;
        text-decoration: none;
        display: flex;
        align-items: center;
        transition: all 0.3s;
        border-left: 3px solid transparent;
    }

        .menu-item:hover {
            background: #f8f9fa;
            color: #1e3a5f;
            border-left-color: #1e3a5f;
            padding-left: 25px;
        }

        .menu-item.active {
            background: linear-gradient(90deg, rgba(30,58,95,0.1) 0%, transparent 100%);
            color: #1e3a5f;
            border-left-color: #1e3a5f;
            font-weight: 600;
        }

        .menu-item i {
            width: 25px;
            margin-right: 12px;
            text-align: center;
        }

    /* Dashboard Content */
    .dashboard-content {
        flex: 1;
    }

    /* Stats Cards */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.08);
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 25px rgba(0,0,0,0.15);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        color: white;
    }

        .stat-icon.primary {
            background: linear-gradient(135deg, #1e3a5f 0%, #0f2847 100%);
        }

        .stat-icon.success {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        }

        .stat-icon.warning {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

        .stat-icon.info {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }

    .stat-details {
        flex: 1;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #6c757d;
        font-size: 0.9rem;
    }

    /* Quick Actions */
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 30px;
    }

    .quick-action-btn {
        padding: 20px;
        background: white;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        text-align: center;
        transition: all 0.3s;
        cursor: pointer;
        text-decoration: none;
        color: #495057;
        display: block;
    }

        .quick-action-btn:hover {
            border-color: #1e3a5f;
            background: #f8f9fa;
            transform: translateY(-3px);
            color: #1e3a5f;
        }

        .quick-action-btn i {
            font-size: 2rem;
            display: block;
            margin-bottom: 10px;
            color: #1e3a5f;
        }

    /* Recent Activities */
    .activity-item {
        padding: 15px;
        border-bottom: 1px solid #e9ecef;
        display: flex;
        align-items: center;
        gap: 15px;
    }

