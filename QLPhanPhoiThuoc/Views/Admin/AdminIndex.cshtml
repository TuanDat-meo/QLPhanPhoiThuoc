@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/BenhNhan/BenhNhan.js"></script>
    <script>
        // ==================== GLOBAL VARIABLES & UTILS ====================
        let panelStack = [];
        let currentPanelLevel = 0;

        function showLoading() {
            $('#loadingOverlay').addClass('show');
        }

        function hideLoading() {
            $('#loadingOverlay').removeClass('show');
        }

        function showSection(sectionId) {
            console.log('üîÑ Switching to section:', sectionId);
            $('.content-section').removeClass('active');
            $('#' + sectionId).addClass('active');
        }

        // ==================== EXECUTE INLINE SCRIPTS ====================
        // H√†m n√†y s·∫Ω execute c√°c <script> tag trong HTML ƒë∆∞·ª£c load qua AJAX
        function executeScripts(container) {
            const scripts = container.find('script');
            scripts.each(function() {
                const script = $(this);
                const scriptContent = script.html();
                const scriptSrc = script.attr('src');

                if (scriptSrc) {
                    // Load external script
                    $.getScript(scriptSrc);
                } else if (scriptContent) {
                    // Execute inline script
                    try {
                        eval(scriptContent);
                    } catch (e) {
                        console.error('Error executing script:', e);
                    }
                }
            });
        }

        // ==================== APPLY INLINE STYLES ====================
        // H√†m n√†y s·∫Ω apply c√°c <style> tag trong HTML ƒë∆∞·ª£c load qua AJAX
        function applyInlineStyles(container) {
            const styles = container.find('style');
            styles.each(function() {
                const style = $(this);
                // Move style to head or keep in container
                if (!$('head').find(`style:contains("${style.html().substring(0, 50)}")`).length) {
                    $('head').append(style.clone());
                }
            });
        }

        // ==================== PANEL MANAGEMENT SYSTEM ====================
        function openPanel(url, title, icon = 'fas fa-file') {
            currentPanelLevel++;

            const panelId = 'panel-' + currentPanelLevel;
            const overlayId = 'overlay-' + currentPanelLevel;

            const overlay = $('<div>', {
                id: overlayId,
                class: 'panel-overlay',
                'data-level': currentPanelLevel
            });

            const panel = $('<div>', {
                id: panelId,
                class: 'panel-container',
                'data-level': currentPanelLevel
            });

            const header = $(`
                <div class="panel-header">
                    <h4 class="panel-title">
                        <i class="${icon}"></i>
                        <span>${title}</span>
                    </h4>
                    <button class="panel-close-btn" onclick="closePanel(${currentPanelLevel})">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `);

            const body = $('<div>', {
                class: 'panel-body'
            }).html('<div style="text-align: center; padding: 50px;"><div class="spinner"></div></div>');

            panel.append(header).append(body);
            $('body').append(overlay).append(panel);

            overlay.on('click', function () {
                closePanel(currentPanelLevel);
            });

            setTimeout(() => {
                overlay.addClass('show');
                panel.addClass('show');
            }, 10);

            $.ajax({
                url: url,
                method: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                },
                success: function (data) {
                    body.html(data);

                    // QUAN TR·ªåNG: Apply styles v√† execute scripts
                    applyInlineStyles(body);
                    executeScripts(body);
                },
                error: function (xhr, status, error) {
                    body.html(`<div class="alert alert-danger">L·ªói khi t·∫£i n·ªôi dung: ${error}</div>`);
                }
            });

            panelStack.push({
                id: panelId,
                overlayId: overlayId,
                level: currentPanelLevel
            });

            return currentPanelLevel;
        }

        function closePanel(level) {
            const panelData = panelStack.find(p => p.level === level);

            if (!panelData) return;

            const panel = $('#' + panelData.id);
            const overlay = $('#' + panelData.overlayId);

            panel.removeClass('show');
            overlay.removeClass('show');

            setTimeout(() => {
                panel.remove();
                overlay.remove();
            }, 400);

            panelStack = panelStack.filter(p => p.level !== level);

            if (panelStack.length > 0) {
                currentPanelLevel = Math.max(...panelStack.map(p => p.level));
            } else {
                currentPanelLevel = 0;
            }
        }

        function closeAllPanels() {
            while (panelStack.length > 0) {
