<script>
    let currentPrescriptionData = null;

    // Initialize on page load
    $(document).ready(function() {
        loadDanhSachDonThuoc();

        // Auto-refresh every 30 seconds
        setInterval(function() {
            if (!$('#detailModal').hasClass('show')) {
                loadDanhSachDonThuoc();
            }
        }, 30000);
    });

    // Load prescription list
    function loadDanhSachDonThuoc() {
        const params = {
            loaiDon: $('#filterLoaiDon').val(),
            trangThai: $('#filterTrangThai').val(),
            tuNgay: $('#filterTuNgay').val(),
            denNgay: $('#filterDenNgay').val(),
            timKiem: $('#filterTimKiem').val()
        };

        $.ajax({
            url: '/DonThuoc/DanhSachDonThuoc',
            method: 'GET',
            data: params,
            success: function(response) {
                if (response.success) {
                    renderPrescriptionTable(response.data);
                } else {
                    showError(response.message);
                }
            },
            error: function(xhr, status, error) {
                console.error('Error:', error);
                showError('Lỗi khi tải danh sách đơn thuốc');
            }
        });
    }

    // Render table
    function renderPrescriptionTable(data) {
        const tbody = $('#prescriptionTableBody');
        tbody.empty();

        if (!data || data.length === 0) {
            tbody.html(`
                <tr>
                    <td colspan="8">
                        <div class="empty-state">
                            <i class="fas fa-prescription"></i>
                            <h4>Không có đơn thuốc</h4>
                            <p>Chưa có đơn thuốc nào trong hệ thống</p>
                        </div>
                    </td>
                </tr>
            `);
            return;
        }

        data.forEach(function(item) {
            const statusClass = getStatusClass(item.trangThai);
            const statusText = getStatusText(item.trangThai);
            const ngayKe = formatDate(item.ngayKeDon);

            const row = `
                <tr>
                    <td><strong>${item.maDonThuoc}</strong></td>
                    <td>${ngayKe}</td>
                    <td>
                        <div><strong>${item.benhNhan}</strong></div>
                        <div style="font-size: 0.85rem; color: #666;">${item.maBenhNhan}</div>
                    </td>
                    <td>
                        <div>${item.bacSi}</div>
                        <div style="font-size: 0.85rem; color: #666;">${item.maBacSi}</div>
                    </td>
                    <td>${item.loaiDon === 'NoiTru' ? 'Nội trú' : 'Ngoại trú'}</td>
                    <td class="text-center"><strong>${item.soLoaiThuoc}</strong> loại</td>
                    <td><span class="status-badge ${statusClass}">${statusText}</span></td>
                    <td>
                        <button class="btn btn-primary btn-sm" onclick="viewPrescriptionDetail('${item.maDonThuoc}')">
                            <i class="fas fa-eye"></i> Xem
                        </button>
                        ${item.trangThai === 'ChoCapPhat' && '@chucVu' === 'DuocSi' ? 
                            `<button class="btn btn-success btn-sm" onclick="capPhatThuoc('${item.maDonThuoc}')">
                                <i class="fas fa-pills"></i> Cấp phát
                            </button>` : ''}
                        ${item.trangThai === 'ChoCapPhat' ? 
                            `<button class="btn btn-danger btn-sm" onclick="cancelPrescription('${item.maDonThuoc}')">
                                <i class="fas fa-times"></i> Hủy
                            </button>` : ''}
                    </td>
                </tr>
            `;

            tbody.append(row);
        });
    }

    // View detail
    function viewPrescriptionDetail(maDonThuoc) {
        showLoading();

        $.ajax({
            url: '/DonThuoc/ChiTietDonThuoc',
            method: 'GET',
            data: { maDonThuoc: maDonThuoc },
            success: function(response) {
                if (response.success) {
                    currentPrescriptionData = response.data;
                    renderDetailModal(response.data);
                    $('#detailModal').addClass('show');
                } else {
                    showError(response.message);
                }
                hideLoading();
            },
            error: function(xhr, status, error) {
                console.error('Error:', error);
                showError('Lỗi khi tải chi tiết đơn thuốc');
                hideLoading();
            }
        });
    }

    // Render detail modal
    function renderDetailModal(data) {
        const statusClass = getStatusClass(data.trangThai);
        const statusText = getStatusText(data.trangThai);
        const ngayKeDon = formatDateTime(data.ngayKeDon);

        let html = `
            <div class="detail-section">
                <div class="section-title">
                    <i class="fas fa-info-circle"></i>
                    Thông tin đơn thuốc
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Mã đơn thuốc</div>
                        <div class="info-value">${data.maDonThuoc}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Ngày kê đơn</div>
                        <div class="info-value">${ngayKeDon}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Loại đơn</div>
                        <div class="info-value">${data.loaiDon === 'NoiTru' ? 'Nội trú' : 'Ngoại trú'}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Trạng thái</div>
                        <div class="info-value">
                            <span class="status-badge ${statusClass}">${statusText}</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <div class="section-title">
                    <i class="fas fa-user-injured"></i>
                    Thông tin bệnh nhân
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Mã bệnh nhân</div>
                        <div class="info-value">${data.benhNhan.maBenhNhan}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Họ tên</div>
                        <div class="info-value">${data.benhNhan.tenBenhNhan}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Ngày sinh</div>
                        <div class="info-value">${formatDate(data.benhNhan.ngaySinh)}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Giới tính</div>
                        <div class="info-value">${data.benhNhan.gioiTinh}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Số điện thoại</div>
                        <div class="info-value">${data.benhNhan.soDienThoai || 'Chưa có'}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Địa chỉ</div>
                        <div class="info-value">${data.benhNhan.diaChi || 'Chưa có'}</div>
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <div class="section-title">
                    <i class="fas fa-user-md"></i>
                    Bác sĩ kê đơn
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Mã nhân viên</div>
                        <div class="info-value">${data.bacSi.maNhanVien}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Họ tên</div>
                        <div class="info-value">${data.bacSi.tenNhanVien}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Chức vụ</div>
                        <div class="info-value">${data.bacSi.chucVu}</div>
                    </div>
                </div>
            </div>

            ${data.chanDoan ? `
            <div class="detail-section">
                <div class="section-title">
                    <i class="fas fa-stethoscope"></i>
                    Chẩn đoán
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Chẩn đoán sơ bộ</div>
                        <div class="info-value">${data.chanDoan}</div>
                    </div>
                </div>
            </div>
            ` : ''}

            <div class="detail-section">
                <div class="section-title">
                    <i class="fas fa-pills"></i>
                    Chi tiết thuốc
                </div>
                <table class="medicine-details-table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên thuốc</th>
                            <th>Hàm lượng</th>
                            <th>Số lượng</th>
                            <th>Liều dùng</th>
                            <th>Số ngày dùng</th>
                            <th>Cách dùng</th>
                        </tr>
                    </thead>
                    <tbody>
        `;

        data.chiTiet.forEach(function(item, index) {
            html += `
                <tr>
                    <td class="text-center">${index + 1}</td>
                    <td><strong>${item.tenThuoc}</strong></td>
                    <td>${item.hamLuong || 'N/A'}</td>
                    <td class="text-center"><strong>${item.soLuong}</strong> ${item.donViTinh}</td>
                    <td>${item.lieuDung || 'N/A'}</td>
                    <td class="text-center">${item.soNgayDung || 'N/A'}</td>
                    <td>${item.cachDung || 'N/A'}</td>
                </tr>
            `;
        });

        html += `
                    </tbody>
                </table>
            </div>
        `;

        $('#detailModalBody').html(html);
    }

    // Close modal
    function closeDetailModal() {
        $('#detailModal').removeClass('show');
        currentPrescriptionData = null;
    }

    // Cấp phát thuốc
    function capPhatThuoc(maDonThuoc) {
        if (!confirm('Xác nhận cấp phát thuốc cho đơn này?')) {
            return;
        }

        showLoading();

        $.ajax({
            url: '/DonThuoc/CapPhatThuoc',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({
                maDonThuoc: maDonThuoc,
                ghiChu: ''
            }),
            success: function(response) {
                if (response.success) {
                    showSuccess('Cấp phát thuốc thành công!');
                    loadDanhSachDonThuoc();
                } else {
                    showError(response.message);
                }
                hideLoading();
            },
            error: function(xhr, status, error) {
                console.error('Error:', error);
                showError('Lỗi khi cấp phát thuốc');
                hideLoading();
            }
        });
    }

    // Cancel prescription
    function cancelPrescription(maDonThuoc) {
        if (!confirm('Bạn có chắc chắn muốn hủy đơn thuốc này?')) {
            return;
        }

        showLoading();

        $.ajax({
            url: '/DonThuoc/HuyDonThuoc',
            method: 'POST',
            data: { maDonThuoc: maDonThuoc },
            success: function(response) {
                if (response.success) {
                    showSuccess('Hủy đơn thuốc thành công!');
                    loadDanhSachDonThuoc();
                } else {
                    showError(response.message);
                }
                hideLoading();
            },
            error: function(xhr, status, error) {
                console.error('Error:', error);
                showError('Lỗi khi hủy đơn thuốc');
                hideLoading();
            }
        });
    }

    // Reset filter
    function resetFilter() {
        $('#filterLoaiDon').val('');
        $('#filterTrangThai').val('');
        $('#filterTuNgay').val('');
        $('#filterDenNgay').val('');
        $('#filterTimKiem').val('');
        loadDanhSachDonThuoc();
    }

    // Utility functions
    function getStatusClass(status) {
        switch (status) {
            case 'ChoCapPhat': return 'status-cho-capphat';
            case 'DaCapPhat': return 'status-da-capphat';
            case 'DaHuy': return 'status-da-huy';
            default: return '';
        }
    }

    function getStatusText(status) {
        switch (status) {
            case 'ChoCapPhat': return 'Chờ cấp phát';
            case 'DaCapPhat': return 'Đã cấp phát';
            case 'DaHuy': return 'Đã hủy';
            default: return status;
        }
    }

    function formatDate(dateString) {
        if (!dateString) return 'N/A';
        const date = new Date(dateString);
        return date.toLocaleDateString('vi-VN');
    }

    function formatDateTime(dateString) {
        if (!dateString) return 'N/A';
        const date = new Date(dateString);
        return date.toLocaleString('vi-VN');
    }

    function showLoading() {
        $('#loadingOverlay').addClass('show');
    }

    function hideLoading() {
        $('#loadingOverlay').removeClass('show');
    }

    function showSuccess(message) {
        alert('✓ ' + message);
    }

    function showError(message) {
        alert('✗ ' + message);
    }

    // ESC key to close modal
    $(document).keydown(function(e) {
        if (e.key === 'Escape') {
            closeDetailModal();
        }
    });

    // Click outside modal to close
    $('#detailModal').click(function(e) {
        if (e.target === this) {
            closeDetailModal();
        }
    });
</script>

