        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    /* ==================== RESPONSIVE ==================== */
    @@media (max-width: 768px) {
        .filter-row {
            flex-direction: column;
        }

        .filter-group {
            min-width: 100%;
        }

        .medicine-table {
            font-size: 0.85rem;
        }

        .medicine-table th,
        .medicine-table td {
            padding: 10px;
        }

        .pagination-container {
            flex-direction: column;
            gap: 15px;
        }
    }
</style>
