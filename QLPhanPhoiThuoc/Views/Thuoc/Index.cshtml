@model IEnumerable<QLPhanPhoiThuoc.Models.Entities.Thuoc>

@{
    ViewData["Title"] = "Quản lý thuốc";
    var search = ViewBag.Search ?? "";
    var nhomThuocSelected = ViewBag.NhomThuocSelected ?? "";
    var trangThaiSelected = ViewBag.TrangThaiSelected ?? "";
    var sortBy = ViewBag.SortBy ?? "TenThuoc";
    var sortOrder = ViewBag.SortOrder ?? "asc";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalItems = ViewBag.TotalItems ?? 0;
    var pageSize = ViewBag.PageSize ?? 20;
    var nhomThuocs = ViewBag.NhomThuocs as List<string> ?? new List<string>();
}

<style>
    .medicine-container {
        padding: 25px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: linear-gradient(135deg, #1e3a5f 0%, #0f2847 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 12px;
        margin-bottom: 25px;
        box-shadow: 0 4px 15px rgba(30, 58, 95, 0.3);
    }

    .page-header h2 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 700;
    }

    .page-header p {
        margin: 5px 0 0 0;
        opacity: 0.9;
        font-size: 0.95rem;
    }

    .filter-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .filter-row {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        align-items: end;
    }

    .filter-group {
        flex: 1;
        min-width: 200px;
    }

    .filter-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: 600;
        color: #495057;
        font-size: 0.9rem;
    }

    .filter-group input,
    .filter-group select {
        width: 100%;
        padding: 10px 15px;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        font-size: 0.95rem;
        transition: all 0.3s;
    }

    .filter-group input:focus,
    .filter-group select:focus {
        border-color: #1e3a5f;
        box-shadow: 0 0 0 3px rgba(30, 58, 95, 0.1);
        outline: none;
    }

    .btn-filter {
        background: #1e3a5f;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn-filter:hover {
        background: #0f2847;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(30, 58, 95, 0.3);
    }

    .btn-reset {
        background: #6c757d;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn-reset:hover {
        background: #5a6268;
    }

    .action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .btn-add {
        background: linear-gradient(135deg, #38ef7d 0%, #11998e 100%);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(56, 239, 125, 0.3);
    }

    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(56, 239, 125, 0.4);
        color: white;
        text-decoration: none;
    }

    .result-info {
        color: #6c757d;
        font-size: 0.95rem;
    }

    .medicine-table-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .table-responsive {
        overflow-x: auto;
    }

    .medicine-table {
        width: 100%;
        margin: 0;
    }

    .medicine-table thead {
        background: linear-gradient(135deg, #1e3a5f 0%, #0f2847 100%);
        color: white;
    }

    .medicine-table thead th {
        padding: 15px;
        font-weight: 600;
        text-align: left;
        white-space: nowrap;
        border: none;
    }

    .medicine-table tbody tr {
        border-bottom: 1px solid #e9ecef;
        transition: all 0.2s;
    }

    .medicine-table tbody tr:hover {
        background: #f8f9fa;
    }

    .medicine-table tbody td {
        padding: 15px;
        vertical-align: middle;
    }

    .sortable {
        cursor: pointer;
        user-select: none;
        position: relative;
        padding-right: 25px !important;
    }

    .sortable:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    .sortable::after {
        content: '⇅';
        position: absolute;
        right: 10px;
        opacity: 0.5;
    }

    .sortable.sorted-asc::after {
        content: '↑';
        opacity: 1;
    }

    .sortable.sorted-desc::after {
        content: '↓';
        opacity: 1;
    }

    .badge {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .badge-success {
        background: #d4edda;
        color: #155724;
    }

    .badge-danger {
        background: #f8d7da;
        color: #721c24;
    }

    .badge-warning {
        background: #fff3cd;
        color: #856404;
    }

    .btn-action {
        padding: 6px 12px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.85rem;
        transition: all 0.2s;
        margin-right: 5px;
    }

    .btn-view {
        background: #17a2b8;
        color: white;
    }

    .btn-view:hover {
        background: #138496;
    }

    .btn-edit {
        background: #ffc107;
        color: #333;
    }

    .btn-edit:hover {
        background: #e0a800;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
    }

    .btn-delete:hover {
        background: #c82333;
    }

    .pagination-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background: white;
        border-top: 1px solid #e9ecef;
    }

    .pagination {
        display: flex;
        gap: 5px;
        margin: 0;
    }

    .pagination a,
    .pagination span {
        padding: 8px 12px;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        text-decoration: none;
        color: #495057;
        transition: all 0.2s;
    }

    .pagination a:hover {
        background: #1e3a5f;
        color: white;
        border-color: #1e3a5f;
    }

    .pagination .active {
        background: #1e3a5f;
        color: white;
        border-color: #1e3a5f;
        font-weight: 600;
    }

    .pagination .disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .price-cell {
        font-weight: 600;
        color: #28a745;
    }

    .stock-low {
        color: #dc3545;
        font-weight: 600;
    }

    .stock-normal {
        color: #28a745;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
        border-left: 4px solid #28a745;
    }

    .alert-danger {
        background: #f8d7da;
        color: #721c24;
        border-left: 4px solid #dc3545;
    }
</style>

<div class="medicine-container">
    <!-- Page Header -->
    <div class="page-header">
        <h2><i class="fas fa-pills"></i> Quản lý thuốc</h2>
        <p>Danh sách và quản lý thông tin thuốc trong hệ thống</p>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        </div>
    }

    <!-- Filter Card -->
    <div class="filter-card">
        <form method="get" asp-action="Index">
            <div class="filter-row">
                <div class="filter-group">
                    <label><i class="fas fa-search"></i> Tìm kiếm</label>
                    <input type="text" name="search" value="@search" placeholder="Tên thuốc, mã thuốc, hoạt chất..." />
                </div>

                <div class="filter-group">
                    <label><i class="fas fa-layer-group"></i> Nhóm thuốc</label>
                    <select name="nhomThuoc">
                        <option value="">Tất cả</option>
                        @foreach (var nhom in nhomThuocs)
                        {
                            <option value="@nhom" selected="@(nhom == nhomThuocSelected)">@nhom</option>
                        }
                    </select>
                </div>

                <div class="filter-group">
                    <label><i class="fas fa-toggle-on"></i> Trạng thái</label>
                    <select name="trangThai">
                        <option value="">Tất cả</option>
                        <option value="KichHoat" selected="@(trangThaiSelected == "KichHoat")">Kích hoạt</option>
                        <option value="NgungSuDung" selected="@(trangThaiSelected == "NgungSuDung")">Ngừng sử dụng</option>
                    </select>
                </div>

                <div class="filter-group" style="min-width: auto;">
                    <label>&nbsp;</label>
                    <button type="submit" class="btn-filter">
                        <i class="fas fa-filter"></i> Lọc
                    </button>
                </div>

                <div class="filter-group" style="min-width: auto;">
                    <label>&nbsp;</label>
                    <a href="@Url.Action("Index")" class="btn-reset">
                        <i class="fas fa-redo"></i> Đặt lại
                    </a>
                </div>
            </div>

            <input type="hidden" name="sortBy" value="@sortBy" />
            <input type="hidden" name="sortOrder" value="@sortOrder" />
        </form>
    </div>

    <!-- Action Bar -->
    <div class="action-bar">
        <div class="result-info">
            <i class="fas fa-info-circle"></i> Hiển thị @Model.Count() / @totalItems thuốc
        </div>
        <a href="@Url.Action("Create")" class="btn-add">
            <i class="fas fa-plus-circle"></i> Thêm thuốc mới
        </a>
    </div>

    <!-- Medicine Table -->
    <div class="medicine-table-card">
        <div class="table-responsive">
            <table class="medicine-table">
                <thead>
                    <tr>
                        <th class="sortable @(sortBy == "MaThuoc" ? (sortOrder == "asc" ? "sorted-asc" : "sorted-desc") : "")" 
                            onclick="sortTable('MaThuoc')">Mã thuốc</th>
                        <th class="sortable @(sortBy == "TenThuoc" ? (sortOrder == "asc" ? "sorted-asc" : "sorted-desc") : "")" 
                            onclick="sortTable('TenThuoc')">Tên thuốc</th>
                        <th>Hoạt chất</th>
                        <th class="sortable @(sortBy == "NhomThuoc" ? (sortOrder == "asc" ? "sorted-asc" : "sorted-desc") : "")" 
                            onclick="sortTable('NhomThuoc')">Nhóm</th>
                        <th>Đơn vị</th>
                        <th class="sortable @(sortBy == "GiaXuat" ? (sortOrder == "asc" ? "sorted-asc" : "sorted-desc") : "")" 
                            onclick="sortTable('GiaXuat')">Giá xuất</th>
                        <th>Tồn kho</th>
                        <th>Trạng thái</th>
                        <th style="text-align: center;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.MaThuoc</strong></td>
                                <td>@item.TenThuoc</td>
                                <td>@(item.HoatChat ?? "-")</td>
                                <td>@(item.NhomThuoc ?? "-")</td>
                                <td>@item.DonViTinh</td>
                                <td class="price-cell">@item.GiaXuat.ToString("N0") đ</td>
                                <td class="@(item.TonKhoToiThieu > 0 && item.TonKhoToiThieu >= item.TonKhoToiThieu ? "stock-low" : "stock-normal")">
                                    <!-- Cần tính tồn kho thực tế -->
                                    -
                                </td>
                                <td>
                                    @if (item.TrangThai == "KichHoat")
                                    {
                                        <span class="badge badge-success">Kích hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Ngừng dùng</span>
                                    }
                                </td>
                                <td style="text-align: center; white-space: nowrap;">
                                    <a href="@Url.Action("Details", new { id = item.MaThuoc })" class="btn-action btn-view" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = item.MaThuoc })" class="btn-action btn-edit" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="deleteMedicine('@item.MaThuoc', '@item.TenThuoc')" class="btn-action btn-delete" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" style="text-align: center; padding: 50px;">
                                <i class="fas fa-inbox" style="font-size: 3rem; color: #dee2e6; margin-bottom: 15px;"></i>
                                <p style="color: #6c757d; margin: 0;">Không tìm thấy thuốc nào</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <div class="pagination-container">
                <div class="pagination-info">
                    Trang @currentPage / @totalPages
                </div>
                <div class="pagination">
                    @if (currentPage > 1)
                    {
                        <a href="?page=1&search=@search&nhomThuoc=@nhomThuocSelected&trangThai=@trangThaiSelected&sortBy=@sortBy&sortOrder=@sortOrder">
                            <i class="fas fa-angle-double-left"></i>
                        </a>
                        <a href="?page=@(currentPage - 1)&search=@search&nhomThuoc=@nhomThuocSelected&trangThai=@trangThaiSelected&sortBy=@sortBy&sortOrder=@sortOrder">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    }

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        if (i == currentPage)
                        {
                            <span class="active">@i</span>
                        }
                        else
                        {
                            <a href="?page=@i&search=@search&nhomThuoc=@nhomThuocSelected&trangThai=@trangThaiSelected&sortBy=@sortBy&sortOrder=@sortOrder">@i</a>
                        }
                    }

                    @if (currentPage < totalPages)
                    {
                        <a href="?page=@(currentPage + 1)&search=@search&nhomThuoc=@nhomThuocSelected&trangThai=@trangThaiSelected&sortBy=@sortBy&sortOrder=@sortOrder">
                            <i class="fas fa-angle-right"></i>
                        </a>
                        <a href="?page=@totalPages&search=@search&nhomThuoc=@nhomThuocSelected&trangThai=@trangThaiSelected&sortBy=@sortBy&sortOrder=@sortOrder">
                            <i class="fas fa-angle-double-right"></i>
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function sortTable(column) {
            const currentSort = '@sortBy';
            const currentOrder = '@sortOrder';
            let newOrder = 'asc';

            if (currentSort === column && currentOrder === 'asc') {
                newOrder = 'desc';
            }

            const url = new URL(window.location.href);
            url.searchParams.set('sortBy', column);
            url.searchParams.set('sortOrder', newOrder);
            url.searchParams.set('page', '1');
            window.location.href = url.toString();
        }

        function deleteMedicine(id, name) {
            if (confirm(`Bạn có chắc chắn muốn xóa thuốc "${name}"?`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Delete")';
                
                const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]');
                if (csrfToken) {
                    const token = document.createElement('input');
                    token.type = 'hidden';
                    token.name = '__RequestVerificationToken';
                    token.value = csrfToken.value;
                    form.appendChild(token);
                }

                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = id;
                form.appendChild(idInput);

                document.body.appendChild(form);
                form.submit();
            }
        }

        // Auto hide alerts after 5 seconds
        setTimeout(function() {
            document.querySelectorAll('.alert').forEach(function(alert) {
                alert.style.transition = 'opacity 0.5s';
                alert.style.opacity = '0';
                setTimeout(function() {
                    alert.remove();
                }, 500);
            });
        }, 5000);
    </script>
}
