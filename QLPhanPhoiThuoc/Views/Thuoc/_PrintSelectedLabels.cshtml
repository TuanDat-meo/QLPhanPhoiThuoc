@model IEnumerable<QLPhanPhoiThuoc.Models.Entities.LoThuoc>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>In nhãn lô thuốc - Nhiều lô</title>
    <style>
        @@media print {
            @@page {
                size: 10cm 5cm;
                margin: 0;
            }

            body {
                margin: 0;
                padding: 0;
            }

            .no-print {
                display: none !important;
            }

            .label-container {
                page-break-after: always;
            }

            .label-container:last-child {
                page-break-after: auto;
            }
        }

        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 20px;
            background: #f5f5f5;
        }

        .print-controls {
            text-align: center;
            margin-bottom: 20px;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .print-controls h3 {
            margin: 0 0 15px 0;
            color: #1e3a5f;
        }

        .print-controls .info {
            margin-bottom: 15px;
            color: #666;
        }

        .btn-print {
            padding: 12px 30px;
            background: linear-gradient(135deg, #1e3a5f, #0f2847);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            font-size: 14px;
            margin: 0 5px;
        }

        .btn-print:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(30, 58, 95, 0.3);
        }

        .btn-close {
            padding: 12px 30px;
            background: #6c757d;
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            font-size: 14px;
            margin: 0 5px;
        }

        .btn-close:hover {
            background: #5a6268;
        }

        .labels-preview {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(10cm, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .label-container {
            width: 10cm;
            height: 5cm;
            background: white;
            padding: 0.5cm;
            box-sizing: border-box;
            border: 2px solid #333;
            position: relative;
        }

        .label-header {
            text-align: center;
            border-bottom: 2px solid #333;
            padding-bottom: 0.2cm;
            margin-bottom: 0.3cm;
        }

        .label-header h2 {
            margin: 0;
            font-size: 18px;
            font-weight: bold;
            color: #1e3a5f;
        }

        .label-header p {
            margin: 2px 0 0 0;
            font-size: 10px;
            color: #666;
        }

        .label-body {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0.2cm;
        }

        .label-field {
            margin-bottom: 0.15cm;
        }

        .label-field.full-width {
            grid-column: 1 / -1;
        }

        .label-field label {
            font-size: 9px;
            color: #666;
            font-weight: bold;
            display: block;
            margin-bottom: 1px;
        }

        .label-field .value {
            font-size: 11px;
            color: #000;
            font-weight: bold;
        }

        .medicine-name {
            font-size: 14px !important;
            color: #1e3a5f !important;
        }

        .barcode-section {
            text-align: center;
            margin-top: 0.2cm;
            padding-top: 0.2cm;
            border-top: 1px dashed #ccc;
        }

        .barcode-section svg {
            width: 100%;
            height: 0.8cm;
        }

        .expiry-warning {
            background: #fff3cd;
            border: 1px solid #ffc107;
            padding: 0.1cm;
            text-align: center;
            margin-top: 0.2cm;
            border-radius: 3px;
        }

        .expiry-warning.critical {
            background: #f8d7da;
            border-color: #dc3545;
            color: #721c24;
        }

        .expiry-warning p {
            margin: 0;
            font-size: 10px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="print-controls no-print">
        <h3>
            <i class="fas fa-print"></i> In nhãn lô thuốc
        </h3>
        <div class="info">
            Tổng số nhãn: <strong>@Model.Count()</strong>
        </div>
        <button class="btn-print" onclick="window.print()">
            <i class="fas fa-print"></i> In tất cả
        </button>
        <button class="btn-close" onclick="window.close()">
            <i class="fas fa-times"></i> Đóng
        </button>
    </div>

    <div class="labels-preview">
        @foreach (var loThuoc in Model)
        {
            var now = DateTime.Now;
            var daysLeft = (loThuoc.HanSuDung - now).Days;
            var isExpired = loThuoc.HanSuDung < now;
            var isExpiring = !isExpired && daysLeft <= 30;

            <div class="label-container">
                <!-- Header -->
                <div class="label-header">
                    <h2>NHÃN LÔ THUỐC</h2>
                    <p>Hệ thống Quản lý Phân phối Thuốc</p>
                </div>

                <!-- Body -->
                <div class="label-body">
                    <!-- Tên thuốc -->
                    <div class="label-field full-width">
                        <label>TÊN THUỐC:</label>
                        <div class="value medicine-name">@loThuoc.Thuoc.TenThuoc</div>
                    </div>

                    <!-- Hoạt chất -->
                    @if (!string.IsNullOrEmpty(loThuoc.Thuoc.HoatChat))
                    {
                        <div class="label-field full-width">
                            <label>HOẠT CHẤT:</label>
                            <div class="value">@loThuoc.Thuoc.HoatChat</div>
                        </div>
                    }

                    <!-- Mã lô -->
                    <div class="label-field">
                        <label>MÃ LÔ:</label>
                        <div class="value">@loThuoc.MaLo</div>
                    </div>

                    <!-- Số lô -->
                    <div class="label-field">
                        <label>SỐ LÔ:</label>
                        <div class="value">@loThuoc.SoLo</div>
                    </div>

                    <!-- Ngày sản xuất -->
                    <div class="label-field">
                        <label>NSX:</label>
                        <div class="value">@(loThuoc.NgaySanXuat?.ToString("dd/MM/yyyy") ?? "N/A")</div>
                    </div>

                    <!-- Hạn sử dụng -->
                    <div class="label-field">
                        <label>HẠN SD:</label>
                        <div class="value">@loThuoc.HanSuDung.ToString("dd/MM/yyyy")</div>
                    </div>

                    <!-- Số lượng -->
                    <div class="label-field">
                        <label>SỐ LƯỢNG:</label>
                        <div class="value">@loThuoc.SoLuongCon / @loThuoc.SoLuongNhap @loThuoc.Thuoc.DonViTinh</div>
                    </div>

                    <!-- Kho -->
                    <div class="label-field">
                        <label>KHO:</label>
                        <div class="value">@loThuoc.Kho.TenKho</div>
                    </div>
                </div>

                <!-- Warning -->
                @if (isExpired)
                {
                    <div class="expiry-warning critical">
                        <p>⚠️ ĐÃ QUÁ HẠN SỬ DỤNG</p>
                    </div>
                }
                else if (isExpiring)
                {
                    <div class="expiry-warning">
                        <p>⚠️ SẮP HẾT HẠN - CÒN @daysLeft NGÀY</p>
                    </div>
                }

                <!-- Barcode -->
                <div class="barcode-section">
                    <svg class="barcode-@loThuoc.MaLo"></svg>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
    <script>
        // Generate barcodes for all labels
        @foreach (var loThuoc in Model)
        {
            @:JsBarcode(".barcode-@loThuoc.MaLo", "@loThuoc.MaLo", {
                @:format: "CODE128",
                @:width: 2,
                @:height: 40,
                @:displayValue: true,
                @:fontSize: 10,
                @:margin: 0
            @:});
        }
    </script>
</body>
</html>
