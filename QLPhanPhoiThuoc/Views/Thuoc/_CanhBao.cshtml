@{
    var thuocSapHet = ViewBag.ThuocSapHet as List<dynamic> ?? new List<dynamic>();
    var thuocSapHetHan = ViewBag.ThuocSapHetHan as List<QLPhanPhoiThuoc.Models.Entities.LoThuoc> ?? new List<QLPhanPhoiThuoc.Models.Entities.LoThuoc>();
    var thuocHetHan = ViewBag.ThuocHetHan as List<QLPhanPhoiThuoc.Models.Entities.LoThuoc> ?? new List<QLPhanPhoiThuoc.Models.Entities.LoThuoc>();
    var now = DateTime.Now;
}

<div class="warning-container">
    <!-- Thống kê tổng quan -->
    <div class="warning-stats">
        <div class="stat-card stat-danger">
            <div class="stat-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stat-content">
                <h3>@thuocHetHan.Count</h3>
                <p>Lô thuốc đã hết hạn</p>
            </div>
        </div>

        <div class="stat-card stat-warning">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-content">
                <h3>@thuocSapHetHan.Count</h3>
                <p>Lô thuốc sắp hết hạn</p>
            </div>
        </div>

        <div class="stat-card stat-info">
            <div class="stat-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <div class="stat-content">
                <h3>@thuocSapHet.Count</h3>
                <p>Thuốc sắp hết tồn kho</p>
            </div>
        </div>
    </div>

    <!-- Thuốc đã hết hạn -->
    <div class="warning-section">
        <div class="section-header danger">
            <div class="header-left">
                <i class="fas fa-exclamation-circle"></i>
                <h3>Lô thuốc đã hết hạn</h3>
            </div>
            <span class="badge badge-danger">@thuocHetHan.Count lô</span>
        </div>

        @if (thuocHetHan.Any())
        {
            <div class="table-responsive">
                <table class="warning-table">
                    <thead>
                        <tr>
                            <th>Mã lô</th>
                            <th>Tên thuốc</th>
                            <th>Số lô</th>
                            <th>Kho</th>
                            <th>Ngày hết hạn</th>
                            <th>Đã quá hạn</th>
                            <th>Số lượng còn</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lot in thuocHetHan)
                        {
                            var daysExpired = (now - lot.HanSuDung).Days;
                            <tr class="row-danger">
                                <td><strong>@lot.MaLo</strong></td>
                                <td>@lot.Thuoc.TenThuoc</td>
                                <td>@lot.SoLo</td>
                                <td>@lot.Kho.TenKho</td>
                                <td>@lot.HanSuDung.ToString("dd/MM/yyyy")</td>
                                <td class="text-danger">
                                    <strong>@daysExpired ngày</strong>
                                </td>
                                <td>
                                    <span class="quantity-badge danger">@lot.SoLuongCon</span>
                                </td>
                                <td>
                                    <span class="status-badge status-expired">
                                        <i class="fas fa-times-circle"></i> Hết hạn
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-check-circle"></i>
                <p>Không có lô thuốc nào đã hết hạn</p>
            </div>
        }
    </div>

    <!-- Thuốc sắp hết hạn (30 ngày) -->
    <div class="warning-section">
        <div class="section-header warning">
            <div class="header-left">
                <i class="fas fa-clock"></i>
                <h3>Lô thuốc sắp hết hạn (30 ngày tới)</h3>
            </div>
            <span class="badge badge-warning">@thuocSapHetHan.Count lô</span>
        </div>

        @if (thuocSapHetHan.Any())
        {
            <div class="table-responsive">
                <table class="warning-table">
                    <thead>
                        <tr>
                            <th>Mã lô</th>
                            <th>Tên thuốc</th>
                            <th>Số lô</th>
                            <th>Kho</th>
                            <th>Ngày hết hạn</th>
                            <th>Còn lại</th>
                            <th>Số lượng còn</th>
                            <th>Mức độ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lot in thuocSapHetHan)
                        {
                            var daysRemaining = (lot.HanSuDung - now).Days;
                            var urgencyClass = daysRemaining <= 7 ? "row-danger" : (daysRemaining <= 15 ? "row-warning" : "row-info");
                            var urgencyLevel = daysRemaining <= 7 ? "Rất gấp" : (daysRemaining <= 15 ? "Gấp" : "Lưu ý");
                            var urgencyBadge = daysRemaining <= 7 ? "urgent-critical" : (daysRemaining <= 15 ? "urgent-high" : "urgent-medium");

                            <tr class="@urgencyClass">
                                <td><strong>@lot.MaLo</strong></td>
                                <td>@lot.Thuoc.TenThuoc</td>
                                <td>@lot.SoLo</td>
                                <td>@lot.Kho.TenKho</td>
                                <td>@lot.HanSuDung.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <strong>@daysRemaining ngày</strong>
                                </td>
                                <td>
                                    <span class="quantity-badge warning">@lot.SoLuongCon</span>
                                </td>
                                <td>
                                    <span class="urgency-badge @urgencyBadge">
                                        @urgencyLevel
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-check-circle"></i>
                <p>Không có lô thuốc nào sắp hết hạn trong 30 ngày tới</p>
            </div>
        }
    </div>

    <!-- Thuốc sắp hết tồn kho -->
    <div class="warning-section">
        <div class="section-header info">
            <div class="header-left">
                <i class="fas fa-box-open"></i>
                <h3>Thuốc sắp hết tồn kho</h3>
            </div>
            <span class="badge badge-info">@thuocSapHet.Count thuốc</span>
        </div>

        @if (thuocSapHet.Any())
        {
            <div class="table-responsive">
                <table class="warning-table">
                    <thead>
                        <tr>
                            <th>Mã thuốc</th>
                            <th>Tên thuốc</th>
                            <th>Đơn vị</th>
                            <th>Tồn kho hiện tại</th>
                            <th>Tồn kho tối thiểu</th>
                            <th>Chênh lệch</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in thuocSapHet)
                        {
                            var diff = item.Thuoc.TonKhoToiThieu - item.TonKho;
                            var statusClass = item.TonKho == 0 ? "row-danger" : (item.TonKho < item.Thuoc.TonKhoToiThieu / 2 ? "row-warning" : "row-info");
                            var statusText = item.TonKho == 0 ? "Hết hàng" : (item.TonKho < item.Thuoc.TonKhoToiThieu / 2 ? "Rất thấp" : "Dưới mức");
                            var statusBadge = item.TonKho == 0 ? "status-out" : (item.TonKho < item.Thuoc.TonKhoToiThieu / 2 ? "status-critical" : "status-low");

                            <tr class="@statusClass">
                                <td><strong>@item.Thuoc.MaThuoc</strong></td>
                                <td>@item.Thuoc.TenThuoc</td>
                                <td>@item.Thuoc.DonViTinh</td>
                                <td>
                                    <span class="quantity-badge @(item.TonKho == 0 ? "danger" : "warning")">
                                        @item.TonKho
                                    </span>
                                </td>
                                <td>@item.Thuoc.TonKhoToiThieu</td>
                                <td class="text-danger">
                                    <strong>-@diff</strong>
                                </td>
                                <td>
                                    <span class="status-badge @statusBadge">
                                        <i class="fas fa-exclamation-triangle"></i> @statusText
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-check-circle"></i>
                <p>Tất cả thuốc đều đủ tồn kho</p>
            </div>
        }
    </div>
</div>

