@{
    var tongSoLo = ViewBag.TongSoLo ?? 0;
    var loConHang = ViewBag.LoConHang ?? 0;
    var loSapHetHan = ViewBag.LoSapHetHan ?? 0;
    var loHetHan = ViewBag.LoHetHan ?? 0;
    var thuocSapHet = ViewBag.ThuocSapHet as List<dynamic> ?? new List<dynamic>();
    var thongKeTheoKho = ViewBag.ThongKeTheoKho as List<dynamic> ?? new List<dynamic>();
    var giaTriTonKho = ViewBag.GiaTriTonKho ?? 0m;
}

<div class="tonkho-stats-container">
    <!-- Header -->
    <div class="stats-header">
        <h2><i class="fas fa-chart-line"></i> Thống kê tồn kho chi tiết</h2>
        <p class="subtitle">Cập nhật lúc: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
    </div>

    <!-- Tổng quan -->
    <div class="overview-cards">
        <div class="stat-card-large">
            <div class="card-icon all">
                <i class="fas fa-boxes"></i>
            </div>
            <div class="card-content">
                <h3>@tongSoLo</h3>
                <p>Tổng số lô thuốc</p>
                <div class="card-footer">
                    <span class="percentage">100%</span>
                </div>
            </div>
        </div>

        <div class="stat-card-large">
            <div class="card-icon active">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="card-content">
                <h3>@loConHang</h3>
                <p>Lô còn hàng</p>
                <div class="card-footer">
                    <span class="percentage">@string.Format("{0:0.0}%", tongSoLo > 0 ? (loConHang * 100.0 / tongSoLo) : 0)</span>
                </div>
            </div>
        </div>

        <div class="stat-card-large">
            <div class="card-icon warning">
                <i class="fas fa-clock"></i>
            </div>
            <div class="card-content">
                <h3>@loSapHetHan</h3>
                <p>Lô sắp hết hạn</p>
                <div class="card-footer">
                    <span class="percentage text-warning">@string.Format("{0:0.0}%", tongSoLo > 0 ? (loSapHetHan * 100.0 / tongSoLo) : 0)</span>
                </div>
            </div>
        </div>

        <div class="stat-card-large">
            <div class="card-icon danger">
                <i class="fas fa-times-circle"></i>
            </div>
            <div class="card-content">
                <h3>@loHetHan</h3>
                <p>Lô đã hết hạn</p>
                <div class="card-footer">
                    <span class="percentage text-danger">@string.Format("{0:0.0}%", tongSoLo > 0 ? (loHetHan * 100.0 / tongSoLo) : 0)</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Giá trị tồn kho -->
    <div class="value-section">
        <div class="value-card">
            <div class="value-icon">
                <i class="fas fa-coins"></i>
            </div>
            <div class="value-content">
                <h4>Tổng giá trị tồn kho</h4>
                <h2>@string.Format("{0:N0}", giaTriTonKho) VNĐ</h2>
                <p class="value-note">Giá trị dựa trên giá bán hiện tại</p>
            </div>
        </div>
    </div>

    <!-- 2 cột: Top thuốc sắp hết + Thống kê theo kho -->
    <div class="stats-grid">
        <!-- Top thuốc sắp hết tồn kho -->
        <div class="stats-section">
            <div class="section-header">
                <h3><i class="fas fa-exclamation-triangle"></i> Top 10 thuốc sắp hết tồn kho</h3>
            </div>
            <div class="table-container-small">
                @if (thuocSapHet.Any())
                {
                    <table class="stats-table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên thuốc</th>
                                <th style="text-align: center;">Tồn kho</th>
                                <th style="text-align: center;">Tối thiểu</th>
                                <th style="text-align: center;">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < thuocSapHet.Count; i++)
                            {
                                var item = thuocSapHet[i];
                                var percent = item.TonKhoToiThieu > 0 ? (item.TonKho * 100.0 / item.TonKhoToiThieu) : 0;
                                var statusClass = percent <= 30 ? "critical" : (percent <= 50 ? "warning" : "normal");

                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <div class="medicine-cell">
                                            <strong>@item.TenThuoc</strong>
                                            <small>@item.MaThuoc</small>
                                        </div>
                                    </td>
                                    <td style="text-align: center;">
                                        <span class="quantity-badge @statusClass">
                                            @item.TonKho @item.DonViTinh
                                        </span>
                                    </td>
                                    <td style="text-align: center;">
                                        @item.TonKhoToiThieu @item.DonViTinh
                                    </td>
                                    <td style="text-align: center;">
                                        <div class="progress-mini">
                                            <div class="progress-fill-mini @statusClass" style="width: @Math.Min(percent, 100)%"></div>
                                        </div>
                                        <small class="progress-text">@string.Format("{0:0}%", percent)</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state-small">
                        <i class="fas fa-check-circle"></i>
                        <p>Tất cả thuốc đều đủ tồn kho</p>
                    </div>
                }
            </div>
        </div>

        <!-- Thống kê theo kho -->
        <div class="stats-section">
            <div class="section-header">
                <h3><i class="fas fa-warehouse"></i> Thống kê theo kho</h3>
            </div>
            <div class="warehouse-stats">
                @if (thongKeTheoKho.Any())
                {
                    @foreach (var kho in thongKeTheoKho)
                    {
                        <div class="warehouse-card">
                            <div class="warehouse-header">
                                <h4><i class="fas fa-warehouse"></i> @kho.TenKho</h4>
                            </div>
                            <div class="warehouse-stats-grid">
                                <div class="warehouse-stat">
                                    <div class="stat-number">@kho.SoLoThuoc</div>
                                    <div class="stat-label">Số lô</div>
                                </div>
                                <div class="warehouse-stat">
                                    <div class="stat-number">@kho.TongSoLuong</div>
                                    <div class="stat-label">Tổng SL</div>
                                </div>
                                <div class="warehouse-stat warning">
                                    <div class="stat-number">@kho.LoSapHetHan</div>
                                    <div class="stat-label">Sắp hết hạn</div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state-small">
                        <i class="fas fa-warehouse"></i>
                        <p>Không có dữ liệu kho</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Biểu đồ (nếu cần) -->
    <div class="chart-section">
        <div class="section-header">
            <h3><i class="fas fa-chart-pie"></i> Phân bố trạng thái lô thuốc</h3>
        </div>
        <div class="chart-container">
            <canvas id="statusChart" width="400" height="200"></canvas>
        </div>
    </div>
</div>

<style>
