@model QLPhanPhoiThuoc.Models.Entities.LoThuoc
@{
    var now = DateTime.Now;
    var daysUntilExpiry = (Model.HanSuDung - now).Days;
    var isExpired = Model.HanSuDung < now;
    var isExpiring = !isExpired && daysUntilExpiry <= 30;
    var quantityPercent = Model.SoLuongNhap > 0 ? (Model.SoLuongCon * 100.0 / Model.SoLuongNhap) : 0;
}

<div class="lot-detail-container">
    <!-- Header với gradient và icon -->
    <div class="detail-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="fas fa-boxes"></i>
            </div>
            <div class="header-info">
                <h2>@Model.Thuoc.TenThuoc</h2>
                <div class="header-badges">
                    <span class="badge-code">
                        <i class="fas fa-barcode"></i> Mã lô: @Model.MaLo
                    </span>
                    <span class="badge-lot">
                        <i class="fas fa-tag"></i> Số lô: @Model.SoLo
                    </span>
                    @if (isExpired)
                    {
                        <span class="badge-status expired">
                            <i class="fas fa-times-circle"></i> Đã hết hạn
                        </span>
                    }
                    else if (isExpiring)
                    {
                        <span class="badge-status warning">
                            <i class="fas fa-clock"></i> Sắp hết hạn
                        </span>
                    }
                    else
                    {
                        <span class="badge-status active">
                            <i class="fas fa-check-circle"></i> Còn hạn
                        </span>
                    }
                </div>
            </div>
        </div>
        <button type="button" class="btn-close-modal" onclick="closeLotDetailModal()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <!-- Main Info Grid -->
    <div class="detail-grid">
        <!-- Thông tin thuốc -->
        <div class="detail-section card-gradient-purple">
            <div class="section-header">
                <h3><i class="fas fa-pills"></i> Thông tin thuốc</h3>
            </div>
            <div class="info-table">
                <div class="info-row">
                    <span class="label"><i class="fas fa-code"></i> Mã thuốc:</span>
                    <span class="value">@Model.Thuoc.MaThuoc</span>
                </div>
                <div class="info-row">
                    <span class="label"><i class="fas fa-capsules"></i> Tên thuốc:</span>
                    <span class="value">@Model.Thuoc.TenThuoc</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Thuoc.HoatChat))
                {
                    <div class="info-row">
                        <span class="label"><i class="fas fa-flask"></i> Hoạt chất:</span>
                        <span class="value">@Model.Thuoc.HoatChat</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Thuoc.HamLuong))
                {
                    <div class="info-row">
                        <span class="label"><i class="fas fa-balance-scale"></i> Hàm lượng:</span>
                        <span class="value">@Model.Thuoc.HamLuong</span>
                    </div>
                }
                <div class="info-row">
                    <span class="label"><i class="fas fa-ruler"></i> Đơn vị tính:</span>
                    <span class="value">@Model.Thuoc.DonViTinh</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Thuoc.NhaSanXuat))
                {
                    <div class="info-row">
                        <span class="label"><i class="fas fa-industry"></i> Nhà sản xuất:</span>
                        <span class="value">@Model.Thuoc.NhaSanXuat</span>
                    </div>
                }
            </div>
        </div>

        <!-- Thông tin lô -->
        <div class="detail-section card-gradient-blue">
            <div class="section-header">
                <h3><i class="fas fa-box"></i> Thông tin lô hàng</h3>
            </div>
            <div class="info-table">
                <div class="info-row">
                    <span class="label"><i class="fas fa-fingerprint"></i> Mã lô:</span>
                    <span class="value"><strong>@Model.MaLo</strong></span>
                </div>
                <div class="info-row">
                    <span class="label"><i class="fas fa-tag"></i> Số lô:</span>
                    <span class="value"><strong>@Model.SoLo</strong></span>
                </div>
                <div class="info-row">
                    <span class="label"><i class="fas fa-warehouse"></i> Kho:</span>
                    <span class="value">@Model.Kho.TenKho</span>
                </div>
                <div class="info-row">
                    <span class="label"><i class="fas fa-calendar-plus"></i> Ngày sản xuất:</span>
                    <span class="value">@(Model.NgaySanXuat?.ToString("dd/MM/yyyy") ?? "N/A")</span>
                </div>
                <div class="info-row">
                    <span class="label"><i class="fas fa-calendar-times"></i> Hạn sử dụng:</span>
                    <span class="value @(isExpired ? "text-danger" : (isExpiring ? "text-warning" : ""))">
                        @Model.HanSuDung.ToString("dd/MM/yyyy")
                        @if (isExpired)
                        {
                            <small class="expiry-note danger">(Quá hạn @Math.Abs(daysUntilExpiry) ngày)</small>
                        }
                        else if (isExpiring)
                        {
                            <small class="expiry-note warning">(Còn @daysUntilExpiry ngày)</small>
                        }
                        else
                        {
                            <small class="expiry-note success">(Còn @daysUntilExpiry ngày)</small>
                        }
                    </span>
                </div>
            </div>
        </div>

        <!-- Thông tin số lượng -->
        <div class="detail-section card-gradient-green full-width">
            <div class="section-header">
                <h3><i class="fas fa-chart-bar"></i> Thống kê số lượng</h3>
            </div>
            <div class="quantity-stats">
                <div class="stat-item stat-purple">
                    <div class="stat-icon-wrapper">
                        <i class="fas fa-boxes"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Số lượng nhập</div>
                        <div class="stat-value">@Model.SoLuongNhap</div>
                        <div class="stat-unit">@Model.Thuoc.DonViTinh</div>
                    </div>
                </div>
                <div class="stat-item stat-orange">
                    <div class="stat-icon-wrapper">
                        <i class="fas fa-arrow-right"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Đã cấp phát</div>
                        <div class="stat-value">@(Model.SoLuongNhap - Model.SoLuongCon)</div>
                        <div class="stat-unit">@Model.Thuoc.DonViTinh</div>
                    </div>
                </div>
                <div class="stat-item stat-green highlight">
                    <div class="stat-icon-wrapper">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Còn lại</div>
                        <div class="stat-value large">@Model.SoLuongCon</div>
                        <div class="stat-unit">@Model.Thuoc.DonViTinh</div>
                    </div>
                </div>
            </div>

            <!-- Progress bar -->
            <div class="quantity-progress-detail">
                <div class="progress-label">
                    <span><i class="fas fa-percent"></i> Tỷ lệ tồn kho</span>
                    <span class="progress-percentage"><strong>@string.Format("{0:0.0}%", quantityPercent)</strong></span>
                </div>
                <div class="progress-bar-large">
                    @{
                        var progressClass = quantityPercent <= 10 ? "critical" :
                                           (quantityPercent <= 30 ? "warning" : "normal");
                    }
                    <div class="progress-fill-large @progressClass" style="width: @quantityPercent%"></div>
                </div>
                <div class="progress-info">
                    @if (quantityPercent <= 10)
                    {
                        <span class="progress-status critical">
                            <i class="fas fa-exclamation-circle"></i> Tồn kho cực thấp
                        </span>
                    }
                    else if (quantityPercent <= 30)
                    {
                        <span class="progress-status warning">
                            <i class="fas fa-exclamation-triangle"></i> Tồn kho thấp
                        </span>
                    }
                    else
                    {
                        <span class="progress-status normal">
                            <i class="fas fa-check-circle"></i> Tồn kho ổn định
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Thông tin giá trị -->
        <div class="detail-section card-gradient-teal full-width">
            <div class="section-header">
                <h3><i class="fas fa-dollar-sign"></i> Thông tin sử dụng</h3>
            </div>
            <div class="usage-info">
                <div class="usage-card">
                    <div class="usage-icon purple">
                        <i class="fas fa-arrow-down"></i>
                    </div>
                    <div class="usage-content">
                        <div class="usage-label">Nhập vào</div>
                        <div class="usage-value">@Model.SoLuongNhap <span class="usage-unit">@Model.Thuoc.DonViTinh</span></div>
                    </div>
                </div>
                <div class="usage-card">
                    <div class="usage-icon orange">
                        <i class="fas fa-arrow-up"></i>
                    </div>
                    <div class="usage-content">
                        <div class="usage-label">Đã sử dụng</div>
                        <div class="usage-value">@(Model.SoLuongNhap - Model.SoLuongCon) <span class="usage-unit">@Model.Thuoc.DonViTinh</span></div>
                    </div>
                </div>
                <div class="usage-card highlight">
                    <div class="usage-icon green">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="usage-content">
                        <div class="usage-label">Tỷ lệ sử dụng</div>
                        <div class="usage-value large">@string.Format("{0:0.0}%", Model.SoLuongNhap > 0 ? ((Model.SoLuongNhap - Model.SoLuongCon) * 100.0 / Model.SoLuongNhap) : 0)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lịch sử thông tin -->
    <div class="detail-section timeline-section">
        <div class="section-header">
            <h3><i class="fas fa-history"></i> Thông tin lô hàng</h3>
        </div>
        <div class="history-timeline">
            <div class="timeline-item">
                <div class="timeline-marker import">
                    <i class="fas fa-arrow-down"></i>
                </div>
                <div class="timeline-content">
                    <div class="timeline-header">
                        <div class="timeline-title">
                            <strong>Nhập kho</strong>
                            <span class="timeline-badge import">Nhập hàng</span>
                        </div>
                        <span class="timeline-date">@(Model.NgaySanXuat?.ToString("dd/MM/yyyy") ?? "N/A")</span>
                    </div>
                    <div class="timeline-body">
                        Lô thuốc <strong>@Model.SoLo</strong> được nhập với số lượng <strong>@Model.SoLuongNhap @Model.Thuoc.DonViTinh</strong> vào kho <strong>@Model.Kho.TenKho</strong>
                    </div>
                    <div class="timeline-footer">
                        <span><i class="fas fa-calendar-check"></i> Hạn sử dụng: @Model.HanSuDung.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action buttons -->
    <div class="detail-actions">
        <button type="button" class="btn-action-detail btn-print" onclick="printLotDetail()">
            <i class="fas fa-print"></i> In phiếu
        </button>
        <button type="button" class="btn-action-detail btn-export" onclick="exportLotDetail()">
            <i class="fas fa-file-excel"></i> Xuất Excel
        </button>
        @if (isExpired || Model.SoLuongCon == 0)
        {
            <button type="button" class="btn-action-detail btn-warning" onclick="handleExpiredLot('@Model.MaLo')">
                <i class="fas fa-exclamation-triangle"></i> Xử lý lô
            </button>
        }
        <button type="button" class="btn-action-detail btn-secondary" onclick="closeLotDetailModal()">
            <i class="fas fa-times"></i> Đóng
        </button>
    </div>
</div>

