        color: white;
    }

    .usage-icon {
        width: 48px;
        height: 48px;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        flex-shrink: 0;
    }

    .usage-icon.purple {
        background: linear-gradient(135deg, #a78bfa, #8b5cf6);
    }

    .usage-icon.orange {
        background: linear-gradient(135deg, #fb923c, #f97316);
    }

    .usage-icon.green {
        background: rgba(255, 255, 255, 0.2);
    }

    .usage-content {
        flex: 1;
    }

    .usage-label {
        font-size: 0.75rem;
