        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
    }

    .stat-purple .stat-icon-wrapper {
        background: linear-gradient(135deg, #a78bfa, #8b5cf6);
        color: white;
    }

    .stat-orange .stat-icon-wrapper {
        background: linear-gradient(135deg, #fb923c, #f97316);
        color: white;
    }

    .stat-green .stat-icon-wrapper {
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        font-size: 0.75rem;
        color: #64748b;
        margin-bottom: 0.5rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-item.highlight .stat-label {
        color: rgba(255, 255, 255, 0.9);
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.25rem;
        line-height: 1;
    }

    .stat-value.large {
        font-size: 2.5rem;
    }

    .stat-item.highlight .stat-value {
        color: white;
    }

    .stat-unit {
        font-size: 0.875rem;
        color: #64748b;
        font-weight: 500;
    }

    .stat-item.highlight .stat-unit {
        color: rgba(255, 255, 255, 0.8);
    }

    /* Progress Bar */
    .quantity-progress-detail {
        background: white;
        padding: 1.25rem;
        border-radius: 0.75rem;
    }

    .progress-label {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
        font-size: 0.875rem;
        color: #64748b;
        font-weight: 600;
    }

    .progress-percentage {
        font-size: 1.125rem;
        color: #1e293b;
    }

    .progress-bar-large {
        width: 100%;
        height: 16px;
        background: #e2e8f0;
        border-radius: 8px;
        overflow: hidden;
        position: relative;
    }

    .progress-fill-large {
        height: 100%;
        transition: width 0.5s ease;
        border-radius: 8px;
        position: relative;
        overflow: hidden;
    }

    .progress-fill-large::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        animation: shimmer 2s infinite;
    }

    @@keyframes shimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }

    .progress-fill-large.normal {
        background: linear-gradient(90deg, #10b981, #059669);
    }

    .progress-fill-large.warning {
        background: linear-gradient(90deg, #f59e0b, #d97706);
    }

    .progress-fill-large.critical {
        background: linear-gradient(90deg, #ef4444, #dc2626);
    }

    .progress-info {
        margin-top: 0.75rem;
        display: flex;
        justify-content: center;
    }

    .progress-status {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .progress-status.normal {
        background: #dcfce7;
        color: #166534;
    }

    .progress-status.warning {
        background: #fef3c7;
        color: #92400e;
    }

    .progress-status.critical {
        background: #fee2e2;
        color: #991b1b;
    }

