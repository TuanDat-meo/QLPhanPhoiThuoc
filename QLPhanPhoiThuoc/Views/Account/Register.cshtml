@model QLPhanPhoiThuoc.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý thuốc bệnh viện</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * { margin:0; padding:0; box-sizing:border-box; }

        body {
            font-family:'Segoe UI',Tahoma,Geneva,Verdana,sans-serif;
            background:linear-gradient(135deg,#0f172a 0%,#1e293b 50%,#0f172a 100%);
            min-height:100vh;
            padding:40px 20px;
            position:relative; overflow-x:hidden;
        }
        body::before {
            content:''; position:fixed; top:-30%; left:-15%;
            width:600px; height:600px;
            background:radial-gradient(circle,rgba(56,189,248,.08) 0%,transparent 70%);
            border-radius:50%; pointer-events:none;
        }
        body::after {
            content:''; position:fixed; bottom:-25%; right:-10%;
            width:500px; height:500px;
            background:radial-gradient(circle,rgba(251,113,133,.07) 0%,transparent 70%);
            border-radius:50%; pointer-events:none;
        }

        /* ─── Card ─── */
        .register-container {
            max-width:900px; margin:0 auto;
            background:#fff;
            border-radius:24px;
            box-shadow:0 25px 60px rgba(0,0,0,.35);
            overflow:hidden;
            position:relative; z-index:1;
        }

        /* ─── Header ─── */
        .register-header {
            background:linear-gradient(160deg,#1e3a5f 0%,#0f2847 50%,#162d4a 100%);
            padding:42px 40px 36px;
            text-align:center;
            color:#fff;
            position:relative; overflow:hidden;
        }
        .register-header::before {
            content:''; position:absolute; top:-50%; right:-30%;
            width:70%; height:70%;
            background:radial-gradient(circle,rgba(56,189,248,.1) 0%,transparent 70%);
            border-radius:50%;
        }
        .register-header::after {
            content:''; position:absolute; bottom:-50%; left:-25%;
            width:60%; height:60%;
            background:radial-gradient(circle,rgba(251,113,133,.08) 0%,transparent 70%);
            border-radius:50%;
        }
        .register-header > * { position:relative; z-index:1; }

        .register-header h1 { font-size:2.1rem; font-weight:700; margin-bottom:8px; }
        .register-header p  { font-size:.95rem; opacity:.8; color:#cbd5e1; }

        .vneid-badge {
            display:inline-flex; align-items:center; gap:6px;
            background:rgba(255,255,255,.15);
            padding:8px 20px; border-radius:25px;
            margin-top:14px; font-size:.88rem; font-weight:600;
            backdrop-filter:blur(4px);
        }
        .vneid-badge i { color:#fbbf24; }

        /* ─── Body ─── */
        .register-body { padding:40px 50px; background:#fafbfc; }

        /* ─── Step Indicator ─── */
        .step-indicator {
            display:flex; justify-content:center;
            margin-bottom:38px; position:relative;
        }
        .step {
            display:flex; flex-direction:column; align-items:center;
            position:relative; flex:1; max-width:200px;
        }
        .step-number {
            width:48px; height:48px; border-radius:14px;
            background:#e2e8f0; color:#94a3b8;
            display:flex; align-items:center; justify-content:center;
            font-weight:700; font-size:1.1rem;
            margin-bottom:10px; position:relative; z-index:2;
            transition:all .3s;
        }
        .step.active .step-number {
            background:linear-gradient(135deg,#1e3a5f,#162d4a);
            color:#fff;
            box-shadow:0 6px 18px rgba(30,58,95,.35);
        }
        .step.completed .step-number {
            background:linear-gradient(135deg,#4ade80,#22c55e);
            color:#fff;
            box-shadow:0 4px 12px rgba(74,222,128,.3);
        }
        .step-title { font-size:.82rem; color:#94a3b8; text-align:center; font-weight:600; }
        .step.active .step-title { color:#38bdf8; }
        .step.completed .step-title { color:#4ade80; }

        /* connector line */
        .step::after {
            content:''; position:absolute; top:24px; left:50%;
            width:100%; height:3px;
            background:#e2e8f0; z-index:1;
            border-radius:2px;
        }
        .step:last-child::after { display:none; }
        .step.completed::after { background:linear-gradient(90deg,#4ade80,#e2e8f0); }

        /* ─── Step Content ─── */
        .step-content { display:none; }
        .step-content.active {
            display:block;
            animation:fadeIn .4s ease;
        }
        @@keyframes fadeIn {
            from { opacity:0; transform:translateY(16px); }
            to   { opacity:1; transform:translateY(0); }
        }

        /* ─── Section title ─── */
        .section-title {
            font-size:1.3rem; color:#0f172a; margin-bottom:22px;
            font-weight:700; display:flex; align-items:center; gap:10px;
        }
        .section-title i { color:#38bdf8; }

        /* ─── Form rows ─── */
        .form-row { display:grid; grid-template-columns:1fr 1fr; gap:20px; margin-bottom:18px; }
        .form-group { margin-bottom:18px; }
        .form-label {
            display:block; margin-bottom:7px; color:#1e293b;
            font-weight:600; font-size:.88rem; letter-spacing:.2px;
        }
        .form-label .required { color:#fb7185; margin-left:3px; }

        /* ─── Input wrapper ─── */
        .input-wrapper { position:relative; }
        .input-wrapper .icon-left {
            position:absolute; left:15px; top:50%;
            transform:translateY(-50%); color:#94a3b8;
            font-size:1rem; pointer-events:none; z-index:2;
        }
        .input-wrapper .toggle-pw {
            position:absolute; right:14px; top:50%;
            transform:translateY(-50%); color:#94a3b8;
            font-size:1rem; cursor:pointer; z-index:2;
            background:none; border:none; padding:5px;
            border-radius:7px; transition:color .2s, background .2s;
            display:flex; align-items:center; justify-content:center;
        }
        .input-wrapper .toggle-pw:hover { color:#1e3a5f; background:rgba(30,58,95,.07); }

        .form-control, .form-select {
            width:100%; padding:12px 44px 12px 44px;
            border:2px solid #e2e8f0; border-radius:12px;
            font-size:.94rem; color:#0f172a; background:#fff;
            transition:border-color .25s, box-shadow .25s;
        }
        .form-control:focus, .form-select:focus {
            outline:none; border-color:#38bdf8;
            box-shadow:0 0 0 3px rgba(56,189,248,.18);
        }
        .form-control::placeholder { color:#94a3b8; }
        .form-control:disabled { background:#f1f5f9; color:#64748b; cursor:not-allowed; }

        /* ─── Alerts ─── */
        .alert-custom {
            padding:16px 18px; border-radius:12px;
            display:flex; align-items:flex-start; gap:12px;
            margin-bottom:22px; font-size:.9rem; line-height:1.5;
        }
        .alert-custom i { font-size:1.15rem; margin-top:2px; flex-shrink:0; }
        .alert-error { background:#fee; border:2px solid #fca5a5; color:#991b1b; }
        .alert-error i { color:#dc2626; }
        .alert-success { background:#d1fae5; border:2px solid #6ee7b7; color:#065f46; }
        .alert-success i { color:#10b981; }
        .alert-info { background:#dbeafe; border:2px solid #93c5fd; color:#1e3a8a; }
        .alert-info i { color:#3b82f6; }

        .alert-custom ul { margin:0; padding-left:20px; }
        .alert-custom li { margin-bottom:4px; }

        /* ─── VNeID lookup card ─── */
        .vneid-lookup {
            background:#f0f9ff;
            border:2px dashed #38bdf8;
            border-radius:14px;
            padding:30px 28px;
            text-align:center;
        }
        .vneid-lookup .icon-block {
            display:inline-flex; align-items:center; justify-content:center;
            width:70px; height:70px; border-radius:50%;
            background:linear-gradient(135deg,#38bdf8,#0ea5e9);
            color:#fff; font-size:2rem; margin-bottom:18px;
            box-shadow:0 8px 20px rgba(14,165,233,.25);
        }
        .vneid-lookup h4 {
            font-size:1.2rem; color:#0f172a; margin-bottom:10px; font-weight:700;
        }
        .vneid-lookup p {
            color:#475569; font-size:.92rem; margin-bottom:20px; line-height:1.5;
        }
        .vneid-lookup .input-group {
            display:flex; gap:12px; max-width:500px; margin:0 auto 14px;
        }
        .vneid-lookup input {
            flex:1; padding:12px 18px; border-radius:10px;
            border:2px solid #cbd5e1; font-size:.95rem; background:#fff;
        }
        .vneid-lookup input:focus {
            outline:none; border-color:#38bdf8;
            box-shadow:0 0 0 3px rgba(56,189,248,.18);
        }
        .vneid-lookup button {
            padding:12px 28px; background:linear-gradient(135deg,#1e3a5f,#162d4a);
            color:#fff; border:none; border-radius:10px;
            font-weight:600; font-size:.92rem; cursor:pointer;
            transition:transform .2s, box-shadow .2s;
            display:flex; align-items:center; gap:8px;
        }
        .vneid-lookup button:hover {
            transform:translateY(-2px);
            box-shadow:0 8px 18px rgba(30,58,95,.3);
        }
        .vneid-lookup button:disabled {
            opacity:.6; cursor:not-allowed; transform:none;
        }
        #cccdError {
            color:#dc2626; font-size:.85rem; margin-top:8px;
            font-weight:600; display:block; min-height:18px;
        }

        /* ─── Result card ─── */
        .vneid-result {
            background:linear-gradient(135deg,#dcfce7,#d1fae5);
            border:2px solid #4ade80;
            border-radius:14px;
            padding:26px 30px;
            display:none;
        }
        .vneid-result .result-header {
            display:flex; align-items:center; gap:14px; margin-bottom:20px;
        }
        .vneid-result .result-header .icon {
            width:50px; height:50px; border-radius:50%;
            background:linear-gradient(135deg,#4ade80,#22c55e);
            color:#fff; display:flex; align-items:center; justify-content:center;
            font-size:1.5rem; box-shadow:0 6px 16px rgba(34,197,94,.3);
        }
        .vneid-result .result-header h4 {
            font-size:1.15rem; color:#065f46; margin:0; font-weight:700;
        }
        .vneid-result .info-grid {
            display:grid; grid-template-columns:1fr 1fr; gap:16px;
        }
        .vneid-result .info-item strong {
            display:block; color:#064e3b; font-size:.82rem;
            margin-bottom:5px; font-weight:600;
        }
        .vneid-result .info-item span {
            display:block; color:#0f172a; font-size:.94rem;
            padding:9px 14px; background:#fff;
            border-radius:8px; border:1px solid #bbf7d0;
        }
        .vneid-result .btn-change {
            margin-top:18px; padding:10px 22px; background:#fff;
            border:2px solid #4ade80; border-radius:9px; color:#065f46;
            cursor:pointer; font-weight:600; font-size:.88rem;
            transition:all .2s; display:inline-flex; align-items:center; gap:8px;
        }
        .vneid-result .btn-change:hover {
            background:#4ade80; color:#fff; transform:translateY(-1px);
        }

        /* ─── Buttons ─── */
        .btn {
            padding:14px 32px; border-radius:12px;
            font-weight:600; font-size:.96rem; cursor:pointer;
            border:none; transition:all .25s;
            display:inline-flex; align-items:center; gap:10px;
            text-decoration:none;
        }
        .btn-primary {
            background:linear-gradient(135deg,#1e3a5f,#162d4a);
            color:#fff; box-shadow:0 6px 18px rgba(30,58,95,.3);
        }
        .btn-primary:hover {
            transform:translateY(-2px);
            box-shadow:0 10px 24px rgba(30,58,95,.4);
        }
        .btn-secondary {
            background:#fff; color:#475569;
            border:2px solid #cbd5e1;
        }
        .btn-secondary:hover { background:#f8fafc; border-color:#94a3b8; }
        .btn-success {
            background:linear-gradient(135deg,#4ade80,#22c55e);
            color:#fff; box-shadow:0 6px 18px rgba(34,197,94,.3);
        }
        .btn-success:hover {
            transform:translateY(-2px);
            box-shadow:0 10px 24px rgba(34,197,94,.4);
        }
        .btn:disabled {
            opacity:.6; cursor:not-allowed;
            transform:none !important;
            box-shadow:none !important;
        }
        .btn i { font-size:1rem; }

        /* ─── Navigation Buttons ─── */
        .step-navigation {
            display:flex; justify-content:space-between;
            margin-top:32px; padding-top:28px;
            border-top:2px solid #e2e8f0;
        }

        /* ─── Checkbox custom ─── */
        .checkbox-wrapper { display:flex; align-items:flex-start; gap:12px; }
        .checkbox-wrapper input[type="checkbox"] {
            width:22px; height:22px; margin-top:2px; cursor:pointer;
            accent-color:#1e3a5f; flex-shrink:0;
        }
        .checkbox-wrapper label {
            font-size:.92rem; color:#475569; line-height:1.5; cursor:pointer;
        }
        .checkbox-wrapper label a {
            color:#0ea5e9; text-decoration:none; font-weight:600;
        }
        .checkbox-wrapper label a:hover {
            text-decoration:underline;
        }

        /* ─── Review/Confirm section ─── */
        .review-section {
            background:#f8fafc;
            border:2px solid #e2e8f0;
            border-radius:12px;
            padding:24px 28px;
            margin-bottom:20px;
        }
        .review-section h5 {
            font-size:1.1rem; color:#0f172a; margin-bottom:16px;
            font-weight:700; display:flex; align-items:center; gap:8px;
        }
        .review-section h5 i { color:#38bdf8; }
        .review-grid {
            display:grid; grid-template-columns:1fr 1fr; gap:14px;
        }
        .review-item {
            padding:12px 16px; background:#fff;
            border-radius:9px; border:1px solid #e2e8f0;
        }
        .review-item strong {
            display:block; color:#64748b; font-size:.82rem;
            margin-bottom:5px; font-weight:600;
        }
        .review-item span {
            display:block; color:#0f172a; font-size:.94rem;
        }

        /* ─── Loading Spinner ─── */
        .loading-spinner {
            display:inline-block;
            width:16px; height:16px;
            border:2px solid rgba(255,255,255,.3);
            border-radius:50%;
            border-top-color:#fff;
            animation:spin .6s linear infinite;
        }
        @@keyframes spin { to { transform:rotate(360deg); } }

        /* ─── Footer link ─── */
        .footer-link {
            text-align:center; padding:25px 0;
            background:#f8fafc; border-top:2px solid #e2e8f0;
            font-size:.92rem; color:#475569;
        }
        .footer-link a {
            color:#0ea5e9; text-decoration:none; font-weight:600;
        }
        .footer-link a:hover { text-decoration:underline; }

        /* ─── Responsive ─── */
        @@media (max-width: 768px) {
            body { padding:20px 15px; }
            .register-body { padding:30px 25px; }
            .register-header { padding:30px 25px; }
            .register-header h1 { font-size:1.7rem; }
            .form-row, .info-grid, .review-grid { grid-template-columns:1fr; }
            .step-navigation { flex-direction:column; gap:12px; }
            .step-navigation .btn { width:100%; justify-content:center; }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <!-- ────────────────── HEADER ────────────────── -->
        <div class="register-header">
            <h1><i class="fas fa-hospital-user"></i> Đăng ký tài khoản</h1>
            <p>Hệ thống quản lý phân phối thuốc bệnh viện</p>
            <div class="vneid-badge">
                <i class="fas fa-shield-alt"></i>
                Tích hợp VNeID
            </div>
        </div>

        <!-- ────────────────── BODY ────────────────── -->
        <div class="register-body">
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert-custom alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <div>
                        <strong>Có lỗi xảy ra:</strong>
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <!-- ────── STEP INDICATOR ────── -->
            <div class="step-indicator">
                <div class="step active" id="stepIndicator1">
                    <div class="step-number">1</div>
                    <div class="step-title">Xác minh VNeID</div>
                </div>
                <div class="step" id="stepIndicator2">
                    <div class="step-number">2</div>
                    <div class="step-title">Tài khoản</div>
                </div>
                <div class="step" id="stepIndicator3">
                    <div class="step-number">3</div>
                    <div class="step-title">Xác nhận</div>
                </div>
            </div>

            <!-- ────────────────── FORM ────────────────── -->
            <form id="registerForm" asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <!-- ═════════════════════════════════════════════════════════════ -->
                <!--                         STEP 1: VNeID                          -->
                <!-- ═════════════════════════════════════════════════════════════ -->
                <div class="step-content active" id="step1">
                    <div class="section-title">
                        <i class="fas fa-id-card"></i>
                        Bước 1: Tra cứu và xác minh VNeID
                    </div>

                    <!-- VNeID Lookup Section -->
                    <div class="vneid-lookup">
                        <div class="icon-block">
                            <i class="fas fa-search"></i>
                        </div>
                        <h4>Nhập số CCCD để tra cứu</h4>
                        <p>Vui lòng nhập chính xác 12 số CCCD của bạn để hệ thống VNeID xác minh thông tin</p>
                        <div class="input-group">
                            <input type="text" id="cccdInput" placeholder="Nhập 12 số CCCD" maxlength="12" />
                            <button type="button" id="btnLookup">
                                <i class="fas fa-search"></i> Tra cứu
                            </button>
                        </div>
                        <span id="cccdError"></span>
                    </div>

                    <!-- VNeID Result (Hidden initially) -->
                    <div class="vneid-result" id="vneidResult">
                        <div class="result-header">
                            <div class="icon"><i class="fas fa-check"></i></div>
                            <h4>Đã xác minh thành công qua VNeID</h4>
                        </div>
                        <div class="info-grid">
                            <div class="info-item">
                                <strong>Số CCCD</strong>
                                <span id="displayCCCD">-</span>
                            </div>
                            <div class="info-item">
                                <strong>Họ và tên</strong>
                                <span id="displayHoTen">-</span>
                            </div>
                            <div class="info-item">
                                <strong>Ngày sinh</strong>
                                <span id="displayNgaySinh">-</span>
                            </div>
                            <div class="info-item">
                                <strong>Giới tính</strong>
                                <span id="displayGioiTinh">-</span>
                            </div>
                            <div class="info-item">
                                <strong>Quê quán</strong>
                                <span id="displayQueQuan">-</span>
                            </div>
                            <div class="info-item">
                                <strong>Nơi thường trú</strong>
                                <span id="displayNoiThuongTru">-</span>
                            </div>
                        </div>
                        <button type="button" class="btn-change" id="btnChangeCCCD">
                            <i class="fas fa-edit"></i> Thay đổi CCCD
                        </button>
                    </div>

                    <!-- Hidden fields to store VNeID data -->
                    <input type="hidden" id="hiddenCCCD" asp-for="CCCD" />
                    <input type="hidden" id="hiddenHoTen" asp-for="HoTen" />
                    <input type="hidden" id="hiddenNgaySinh" asp-for="NgaySinh" />
                    <input type="hidden" id="hiddenGioiTinh" asp-for="GioiTinh" />
                    <input type="hidden" id="hiddenDiaChi" asp-for="DiaChi" />
                    <input type="hidden" id="hiddenQueQuan" asp-for="QueQuan" />

                    <div class="step-navigation">
                        <div></div>
                        <button type="button" class="btn btn-primary" id="btnNextStep1">
                            Tiếp tục <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- ═════════════════════════════════════════════════════════════ -->
                <!--                    STEP 2: Account Information                 -->
                <!-- ═════════════════════════════════════════════════════════════ -->
                <div class="step-content" id="step2">
                    <div class="section-title">
                        <i class="fas fa-user-plus"></i>
                        Bước 2: Thông tin tài khoản và liên hệ
                    </div>

                    <!-- Error Container for Step 2 -->
                    <div class="alert-custom alert-error" id="step2Errors" style="display:none;">
                        <i class="fas fa-exclamation-circle"></i>
                        <div>
                            <strong>Vui lòng sửa các lỗi sau:</strong>
                            <ul id="step2ErrorList"></ul>
                        </div>
                    </div>

                    <!-- Account Info -->
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" asp-for="Username">
                                <i class="fas fa-user"></i> Tên đăng nhập <span class="required">*</span>
                            </label>
                            <div class="input-wrapper">
                                <i class="fas fa-user icon-left"></i>
                                <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="Email">
                                <i class="fas fa-envelope"></i> Email <span class="required">*</span>
                            </label>
                            <div class="input-wrapper">
                                <i class="fas fa-envelope icon-left"></i>
                                <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" asp-for="SoDienThoai">
                                <i class="fas fa-phone"></i> Số điện thoại <span class="required">*</span>
                            </label>
                            <div class="input-wrapper">
                                <i class="fas fa-phone icon-left"></i>
                                <input asp-for="SoDienThoai" class="form-control" placeholder="0912345678" />
                            </div>
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="NhomMau">
                                <i class="fas fa-tint"></i> Nhóm máu
                            </label>
                            <div class="input-wrapper">
                                <i class="fas fa-tint icon-left"></i>
                                <select asp-for="NhomMau" class="form-select">
                                    <option value="">-- Chọn nhóm máu --</option>
                                    <option value="A">A</option>
                                    <option value="B">B</option>
                                    <option value="AB">AB</option>
                                    <option value="O">O</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" asp-for="Password">
                                <i class="fas fa-lock"></i> Mật khẩu <span class="required">*</span>
                            </label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock icon-left"></i>
                                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                                <button type="button" class="toggle-pw" data-target="Password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="ConfirmPassword">
                                <i class="fas fa-lock"></i> Xác nhận mật khẩu <span class="required">*</span>
                            </label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock icon-left"></i>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••••" />
                                <button type="button" class="toggle-pw" data-target="ConfirmPassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="NgheNghiep">
                            <i class="fas fa-briefcase"></i> Nghề nghiệp
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-briefcase icon-left"></i>
                            <input asp-for="NgheNghiep" class="form-control" placeholder="Nghề nghiệp của bạn" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="TienSuDiUng">
                            <i class="fas fa-allergies"></i> Tiền sử dị ứng (nếu có)
                        </label>
                        <div class="input-wrapper">
                            <i class="fas fa-allergies icon-left"></i>
                            <input asp-for="TienSuDiUng" class="form-control" placeholder="VD: Dị ứng penicillin" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="checkbox-wrapper">
                            <input asp-for="AgreeTerms" type="checkbox" />
                            <label asp-for="AgreeTerms">
                                Tôi đã đọc và đồng ý với <a href="#" target="_blank">Điều khoản sử dụng</a>
                                và <a href="#" target="_blank">Chính sách bảo mật</a> của hệ thống
                                <span class="required">*</span>
                            </label>
                        </div>
                        <span asp-validation-for="AgreeTerms" class="text-danger"></span>
                    </div>

                    <div class="step-navigation">
                        <button type="button" class="btn btn-secondary" id="btnBackStep1">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </button>
                        <button type="button" class="btn btn-primary" id="btnNextStep2">
                            Tiếp tục <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- ═════════════════════════════════════════════════════════════ -->
                <!--                       STEP 3: Confirm & Submit                 -->
                <!-- ═════════════════════════════════════════════════════════════ -->
                <div class="step-content" id="step3">
                    <div class="section-title">
                        <i class="fas fa-clipboard-check"></i>
                        Bước 3: Xác nhận thông tin và hoàn tất
                    </div>

                    <div class="alert-custom alert-info">
                        <i class="fas fa-info-circle"></i>
                        <div>
                            <strong>Lưu ý:</strong> Vui lòng kiểm tra kỹ thông tin trước khi hoàn tất đăng ký.
                            Nếu có sai sót, bạn có thể quay lại các bước trước để chỉnh sửa.
                        </div>
                    </div>

                    <div class="review-section">
                        <h5><i class="fas fa-id-card"></i> Thông tin cá nhân (từ VNeID)</h5>
                        <div class="review-grid">
                            <div class="review-item">
                                <strong>Số CCCD</strong>
                                <span id="confirmCCCD">-</span>
                            </div>
                            <div class="review-item">
                                <strong>Họ và tên</strong>
                                <span id="confirmHoTen">-</span>
                            </div>
                            <div class="review-item">
                                <strong>Ngày sinh</strong>
                                <span id="confirmNgaySinh">-</span>
                            </div>
                            <div class="review-item">
                                <strong>Giới tính</strong>
                                <span id="confirmGioiTinh">-</span>
                            </div>
                        </div>
                    </div>

                    <div class="review-section">
                        <h5><i class="fas fa-user-circle"></i> Thông tin tài khoản</h5>
                        <div class="review-grid">
                            <div class="review-item">
                                <strong>Tên đăng nhập</strong>
                                <span id="confirmUsername">-</span>
                            </div>
                            <div class="review-item">
                                <strong>Email</strong>
                                <span id="confirmEmail">-</span>
                            </div>
                            <div class="review-item">
                                <strong>Số điện thoại</strong>
                                <span id="confirmPhone">-</span>
                            </div>
                            <div class="review-item">
                                <strong>Nhóm máu</strong>
                                <span id="confirmNhomMau">Chưa xác định</span>
                            </div>
                        </div>
                    </div>

                    <div class="step-navigation">
                        <button type="button" class="btn btn-secondary" id="btnBackStep2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </button>
                        <button type="submit" class="btn btn-success" id="btnSubmit">
                            <i class="fas fa-check-circle"></i> Hoàn tất đăng ký
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- ────────────────── FOOTER ────────────────── -->
        <div class="footer-link">
            Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập ngay</a>
        </div>
    </div>

    <script>
        /* ────────────────── GLOBAL VARIABLES ────────────────── */
        let currentStep = 1;
        let vneidVerified = false;

        /* ────────────────── STEP MANAGEMENT ────────────────── */
        function goToStep(stepNumber) {
            // Hide all steps
            document.querySelectorAll('.step-content').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.step').forEach(el => {
                el.classList.remove('active', 'completed');
            });

            // Show target step
            document.getElementById('step' + stepNumber).classList.add('active');
            document.getElementById('stepIndicator' + stepNumber).classList.add('active');

            // Mark previous steps as completed
            for (let i = 1; i < stepNumber; i++) {
                document.getElementById('stepIndicator' + i).classList.add('completed');
            }

            currentStep = stepNumber;
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        /* ────────────────── PASSWORD TOGGLE ────────────────── */
        document.querySelectorAll('.toggle-pw').forEach(btn => {
            btn.addEventListener('click', function () {
                const targetId = this.getAttribute('data-target');
                const input = document.getElementById(targetId);
                const icon = this.querySelector('i');

                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        });

        /* ────────────────── VNEID LOOKUP ────────────────── */
        document.getElementById('btnLookup').addEventListener('click', function () {
            const cccd = document.getElementById('cccdInput').value.trim();
            const err = document.getElementById('cccdError');
            err.textContent = '';

            if (!cccd || cccd.length !== 12 || !/^\d{12}$/.test(cccd)) {
                err.textContent = 'Vui lòng nhập đúng 12 số CCCD';
                return;
            }

            this.disabled = true;
            this.innerHTML = '<span class="loading-spinner"></span> Đang tra cứu...';

            fetch('/Account/LookupVNeID', {
                method: 'POST',
                headers: { 
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify(cccd)
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('displayCCCD').textContent        = data.data.soDinhDanh;
                    document.getElementById('displayHoTen').textContent       = data.data.hoTen;
                    document.getElementById('displayNgaySinh').textContent    = new Date(data.data.ngaySinh).toLocaleDateString('vi-VN');
                    document.getElementById('displayGioiTinh').textContent    = data.data.gioiTinh;
                    document.getElementById('displayQueQuan').textContent     = data.data.queQuan || '-';
                    document.getElementById('displayNoiThuongTru').textContent= data.data.noiThuongTru || data.data.diaChiHienTai || '-';

                    document.getElementById('hiddenCCCD').value      = data.data.soDinhDanh;
                    document.getElementById('hiddenHoTen').value     = data.data.hoTen;
                    document.getElementById('hiddenNgaySinh').value  = data.data.ngaySinh;
                    document.getElementById('hiddenGioiTinh').value  = data.data.gioiTinh;
                    document.getElementById('hiddenDiaChi').value    = data.data.diaChiHienTai || '';
                    document.getElementById('hiddenQueQuan').value   = data.data.queQuan || '';

                    // Cập nhật thông tin xác nhận ở step 3
                    document.getElementById('confirmCCCD').textContent = data.data.soDinhDanh;
                    document.getElementById('confirmHoTen').textContent = data.data.hoTen;
                    document.getElementById('confirmNgaySinh').textContent = new Date(data.data.ngaySinh).toLocaleDateString('vi-VN');
                    document.getElementById('confirmGioiTinh').textContent = data.data.gioiTinh;

                    document.getElementById('vneidResult').style.display = 'block';
                    document.querySelector('.vneid-lookup').style.display = 'none';
                    vneidVerified = true;
                } else {
                    err.textContent = data.message || 'Không tìm thấy thông tin công dân';
                }
            })
            .catch(e => { err.textContent = 'Đã xảy ra lỗi khi tra cứu: ' + e.message; })
            .finally(() => {
                this.disabled = false;
                this.innerHTML = '<i class="fas fa-search"></i> Tra cứu';
            });
        });

        document.getElementById('btnChangeCCCD').addEventListener('click', function () {
            document.querySelector('.vneid-lookup').style.display = 'block';
            document.getElementById('vneidResult').style.display = 'none';
            document.getElementById('cccdInput').value = '';
            document.getElementById('cccdError').textContent = '';
            vneidVerified = false;
        });

        /* ─── Step 1 Navigation ─── */
        document.getElementById('btnNextStep1').addEventListener('click', function () {
            const err = document.getElementById('cccdError');
            err.textContent = '';

            if (!vneidVerified) {
                err.textContent = 'Vui lòng tra cứu và xác minh thông tin VNeID trước';
                return;
            }

            goToStep(2);
        });

        /* ─── Step 2 Navigation ─── */
        document.getElementById('btnBackStep1').addEventListener('click', () => goToStep(1));

        document.getElementById('btnNextStep2').addEventListener('click', function () {
            // Lấy giá trị từ form
            const username = document.getElementById('Username').value.trim();
            const email = document.getElementById('Email').value.trim();
            const phone = document.getElementById('SoDienThoai').value.trim();
            const password = document.getElementById('Password').value;
            const confirmPassword = document.getElementById('ConfirmPassword').value;
            const agree = document.getElementById('AgreeTerms').checked;

            // Reset error display
            const errorContainer = document.getElementById('step2Errors');
            const errorList = document.getElementById('step2ErrorList');
            errorList.innerHTML = '';
            errorContainer.style.display = 'none';
            
            let errors = [];

            // Validation
            if (!username) {
                errors.push("Vui lòng nhập tên đăng nhập.");
            } else if (username.length < 4 || username.length > 50) {
                errors.push("Tên đăng nhập phải từ 4-50 ký tự.");
            } else if (!/^[a-zA-Z0-9_]+$/.test(username)) {
                errors.push("Tên đăng nhập chỉ được chứa chữ cái, số và dấu gạch dưới.");
            }

            if (!email) {
                errors.push("Vui lòng nhập email.");
            } else if (!/^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/.test(email)) {
                errors.push("Địa chỉ email không hợp lệ.");
            }

            if (!phone) {
                errors.push("Vui lòng nhập số điện thoại.");
            } else if (!/^(0[3|5|7|8|9])+([0-9]{8})$/.test(phone)) {
                errors.push("Số điện thoại không đúng định dạng (VD: 0912345678).");
            }

            if (!password) {
                errors.push("Vui lòng nhập mật khẩu.");
            } else if (password.length < 8) {
                errors.push("Mật khẩu phải có ít nhất 8 ký tự.");
            } else if (!/^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@@#$%^&*()_+{}:;<>,.?~-]).{8,}$/.test(password)) {
                errors.push("Mật khẩu phải bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt.");
            }

            if (!confirmPassword) {
                errors.push("Vui lòng nhập xác nhận mật khẩu.");
            } else if (password !== confirmPassword) {
                errors.push("Mật khẩu xác nhận không khớp.");
            }

            if (!agree) {
                errors.push("Bạn phải đồng ý với điều khoản sử dụng.");
            }

            // Hiển thị lỗi nếu có
            if (errors.length > 0) {
                errorContainer.style.display = 'flex';
                errors.forEach(err => {
                    const li = document.createElement('li');
                    li.textContent = err;
                    errorList.appendChild(li);
                });
                window.scrollTo({ top: 0, behavior: 'smooth' });
                return;
            }

            // Nếu validation pass, cập nhật thông tin ở step 3
            document.getElementById('confirmUsername').textContent = username;
            document.getElementById('confirmEmail').textContent = email;
            document.getElementById('confirmPhone').textContent = phone;
            document.getElementById('confirmNhomMau').textContent = document.getElementById('NhomMau').value || "Chưa xác định";

            // Chuyển sang step 3
            goToStep(3);
        });

        /* ─── Step 3 Navigation ─── */
        document.getElementById('btnBackStep2').addEventListener('click', () => goToStep(2));

        /* ─── Form submission ─── */
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            // Disable button to prevent double submission
            const submitBtn = document.getElementById('btnSubmit');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="loading-spinner"></span> Đang xử lý...';
            // Form will submit normally - don't prevent default
        });

        /* Only numbers in CCCD */
        document.getElementById('cccdInput').addEventListener('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
        document.getElementById('cccdInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') { e.preventDefault(); document.getElementById('btnLookup').click(); }
        });

        /* Only numbers in phone */
        document.getElementById('SoDienThoai').addEventListener('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
</body>
</html>
