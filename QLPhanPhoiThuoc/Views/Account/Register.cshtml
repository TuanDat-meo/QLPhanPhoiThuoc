@model QLPhanPhoiThuoc.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý thuốc bệnh viện</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * { margin:0; padding:0; box-sizing:border-box; }

        body {
            font-family:'Segoe UI',Tahoma,Geneva,Verdana,sans-serif;
            background:linear-gradient(135deg,#0f172a 0%,#1e293b 50%,#0f172a 100%);
            min-height:100vh;
            padding:40px 20px;
            position:relative; overflow-x:hidden;
        }
        body::before {
            content:''; position:fixed; top:-30%; left:-15%;
            width:600px; height:600px;
            background:radial-gradient(circle,rgba(56,189,248,.08) 0%,transparent 70%);
            border-radius:50%; pointer-events:none;
        }
        body::after {
            content:''; position:fixed; bottom:-25%; right:-10%;
            width:500px; height:500px;
            background:radial-gradient(circle,rgba(251,113,133,.07) 0%,transparent 70%);
            border-radius:50%; pointer-events:none;
        }

        /* ─── Card ─── */
        .register-container {
            max-width:900px; margin:0 auto;
            background:#fff;
            border-radius:24px;
            box-shadow:0 25px 60px rgba(0,0,0,.35);
            overflow:hidden;
            position:relative; z-index:1;
        }

        /* ─── Header ─── */
        .register-header {
            background:linear-gradient(160deg,#1e3a5f 0%,#0f2847 50%,#162d4a 100%);
            padding:42px 40px 36px;
            text-align:center;
            color:#fff;
            position:relative; overflow:hidden;
        }
        .register-header::before {
            content:''; position:absolute; top:-50%; right:-30%;
            width:70%; height:70%;
            background:radial-gradient(circle,rgba(56,189,248,.1) 0%,transparent 70%);
            border-radius:50%;
        }
        .register-header::after {
            content:''; position:absolute; bottom:-50%; left:-25%;
            width:60%; height:60%;
            background:radial-gradient(circle,rgba(251,113,133,.08) 0%,transparent 70%);
            border-radius:50%;
        }
        .register-header > * { position:relative; z-index:1; }

        .register-header h1 { font-size:2.1rem; font-weight:700; margin-bottom:8px; }
        .register-header p  { font-size:.95rem; opacity:.8; color:#cbd5e1; }

        .vneid-badge {
            display:inline-flex; align-items:center; gap:6px;
            background:rgba(255,255,255,.15);
            padding:8px 20px; border-radius:25px;
            margin-top:14px; font-size:.88rem; font-weight:600;
            backdrop-filter:blur(4px);
        }
        .vneid-badge i { color:#fbbf24; }

        /* ─── Body ─── */
        .register-body { padding:40px 50px; background:#fafbfc; }

        /* ─── Step Indicator ─── */
        .step-indicator {
            display:flex; justify-content:center;
            margin-bottom:38px; position:relative;
        }
        .step {
            display:flex; flex-direction:column; align-items:center;
            position:relative; flex:1; max-width:200px;
        }
        .step-number {
            width:48px; height:48px; border-radius:14px;
            background:#e2e8f0; color:#94a3b8;
            display:flex; align-items:center; justify-content:center;
            font-weight:700; font-size:1.1rem;
            margin-bottom:10px; position:relative; z-index:2;
            transition:all .3s;
        }
        .step.active .step-number {
            background:linear-gradient(135deg,#1e3a5f,#162d4a);
            color:#fff;
            box-shadow:0 6px 18px rgba(30,58,95,.35);
        }
        .step.completed .step-number {
            background:linear-gradient(135deg,#4ade80,#22c55e);
            color:#fff;
            box-shadow:0 4px 12px rgba(74,222,128,.3);
        }
        .step-title { font-size:.82rem; color:#94a3b8; text-align:center; font-weight:600; }
        .step.active .step-title { color:#38bdf8; }
        .step.completed .step-title { color:#4ade80; }

        /* connector line */
        .step::after {
            content:''; position:absolute; top:24px; left:50%;
            width:100%; height:3px;
            background:#e2e8f0; z-index:1;
            border-radius:2px;
        }
        .step:last-child::after { display:none; }
        .step.completed::after { background:linear-gradient(90deg,#4ade80,#e2e8f0); }

        /* ─── Step Content ─── */
        .step-content { display:none; }
        .step-content.active {
            display:block;
            animation:fadeIn .4s ease;
        }
        keyframes fadeIn {
            from { opacity:0; transform:translateY(16px); }
            to   { opacity:1; transform:translateY(0); }
        }

        /* ─── Section title ─── */
        .section-title {
            font-size:1.3rem; color:#0f172a; margin-bottom:22px;
            font-weight:700; display:flex; align-items:center; gap:10px;
        }
        .section-title i { color:#38bdf8; }

        /* ─── Form rows ─── */
        .form-row { display:grid; grid-template-columns:1fr 1fr; gap:20px; margin-bottom:18px; }
        .form-group { margin-bottom:18px; }
        .form-label {
            display:block; margin-bottom:7px; color:#1e293b;
            font-weight:600; font-size:.88rem; letter-spacing:.2px;
        }
        .form-label .required { color:#fb7185; margin-left:3px; }

        /* ─── Input wrapper ─── */
        .input-wrapper { position:relative; }
        .input-wrapper .icon-left {
            position:absolute; left:15px; top:50%;
            transform:translateY(-50%); color:#94a3b8;
            font-size:1rem; pointer-events:none; z-index:2;
        }
        .input-wrapper .toggle-pw {
            position:absolute; right:14px; top:50%;
            transform:translateY(-50%); color:#94a3b8;
            font-size:1rem; cursor:pointer; z-index:2;
            background:none; border:none; padding:5px;
            border-radius:7px; transition:color .2s, background .2s;
            display:flex; align-items:center; justify-content:center;
        }
        .input-wrapper .toggle-pw:hover { color:#1e3a5f; background:rgba(30,58,95,.07); }

        .form-control, .form-select {
            width:100%; padding:12px 44px 12px 44px;
            border:2px solid #e2e8f0; border-radius:12px;
            font-size:.94rem; color:#0f172a; background:#fff;
            transition:border-color .25s, box-shadow .25s;
        }
        .form-control:focus, .form-select:focus {
            outline:none; border-color:#38bdf8;
            box-shadow:0 0 0 3px rgba(56,189,248,.18);
        }
        .form-control::placeholder { color:#94a3b8; }
        .form-control:disabled { background:#f1f5f9; color:#64748b; cursor:not-allowed; }
        .input-wrapper.no-right .form-control,
        .input-wrapper.no-right .form-select { padding-right:18px; }

        .text-danger { color:#fb7185; font-size:.82rem; margin-top:5px; display:block; }

        /* ─── Buttons ─── */
        .btn {
            padding:12px 28px; border:none; border-radius:12px;
            font-size:.94rem; font-weight:600; cursor:pointer;
            transition:transform .2s, box-shadow .2s, background .2s;
            display:inline-flex; align-items:center; gap:8px;
        }
        .btn-primary {
            background:linear-gradient(135deg,#1e3a5f,#162d4a); color:#fff;
        }
        .btn-primary:hover { transform:translateY(-2px); box-shadow:0 8px 22px rgba(30,58,95,.35); }

        .btn-secondary {
            background:#f1f5f9; color:#475569;
            border:2px solid #e2e8f0;
        }
        .btn-secondary:hover { background:#e2e8f0; border-color:#cbd5e1; color:#1e293b; }

        .btn-success {
            background:linear-gradient(135deg,#22c55e,#16a34a); color:#fff;
        }
        .btn-success:hover { transform:translateY(-2px); box-shadow:0 8px 22px rgba(34,197,94,.3); }

        .btn-group {
            display:flex; justify-content:space-between;
            margin-top:28px; gap:14px;
        }

        /* ─── Alerts ─── */
        .alert { padding:12px 16px; border-radius:10px; margin-bottom:18px; font-size:.88rem; display:flex; align-items:center; gap:10px; }
        .alert-danger  { background:#fff1f2;  color:#e11d48;  border:1px solid #fecdd3; }
        .alert-success { background:#f0fdf4;  color:#16a34a;  border:1px solid #bbf7d0; }
        .alert-info    { background:#eff6ff;  color:#1e40af;  border:1px solid #bfdbfe; }

        /* ─── VNeID lookup box ─── */
        .vneid-lookup {
            background:linear-gradient(135deg,#eff6ff 0%,#dbeafe 100%);
            border:2px dashed #60a5fa;
            border-radius:16px;
            padding:30px; margin-bottom:28px;
            text-align:center;
        }
        .vneid-lookup h3 { color:#1e40af; margin-bottom:12px; font-size:1.2rem; }
        .vneid-lookup p  { color:#3b82f6; margin-bottom:18px; font-size:.93rem; }

        .vneid-input-group { display:flex; gap:10px; max-width:500px; margin:0 auto; }
        .vneid-input-group input { flex:1; }

        /* ─── VNeID result card ─── */
        .vneid-info {
            background:#f8fafc; border-radius:14px;
            padding:24px; margin-bottom:22px;
            border:1px solid #e2e8f0;
        }
        .vneid-info-header {
            display:flex; align-items:center; justify-content:space-between;
            margin-bottom:18px; padding-bottom:14px;
            border-bottom:2px solid #e2e8f0;
        }
        .vneid-info-header h4 {
            color:#1e293b; font-size:1.1rem;
            display:flex; align-items:center; gap:8px;
        }
        .vneid-verified {
            background:linear-gradient(135deg,#22c55e,#16a34a);
            color:#fff; padding:5px 14px; border-radius:20px;
            font-size:.82rem; font-weight:600;
            display:flex; align-items:center; gap:5px;
        }

        .info-grid { display:grid; grid-template-columns:1fr 1fr; gap:14px; }
        .info-item { display:flex; flex-direction:column; }
        .info-label  { font-size:.82rem; color:#64748b; margin-bottom:4px; font-weight:600; }
        .info-value  { font-size:.94rem; color:#1e293b; font-weight:500; }

        /* ─── Footer ─── */
        .auth-footer {
            text-align:center; margin-top:28px; padding-top:18px;
            border-top:2px solid #e2e8f0;
            font-size:.9rem; color:#64748b;
        }
        .auth-footer a { color:#38bdf8; text-decoration:none; font-weight:600; transition:color .2s; }
        .auth-footer a:hover { color:#0ea5e9; }

        /* ─── Spinner ─── */
        .loading-spinner {
            display:inline-block; width:18px; height:18px;
            border:3px solid rgba(255,255,255,.4);
            border-top:3px solid #fff;
            border-radius:50%;
            animation:spin 0.8s linear infinite;
        }
        keyframes spin { to { transform:rotate(360deg); } }

        /* ─── Responsive ─── */
        media (max-width:768px) {
            .register-body { padding:28px 24px; }
            .form-row { grid-template-columns:1fr; }
            .step-indicator { flex-wrap:wrap; }
            .step { max-width:100%; margin-bottom:18px; }
            .step::after { display:none; }
            .btn-group { flex-direction:column; }
            .info-grid { grid-template-columns:1fr; }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <!-- Header -->
        <div class="register-header">
            <h1><i class="fas fa-user-plus"></i> Đăng ký tài khoản</h1>
            <p>Tạo tài khoản mới với định danh VNeID</p>
            <div class="vneid-badge">
                <i class="fas fa-shield-alt"></i> Xác thực bằng VNeID
            </div>
        </div>

        <!-- Body -->
        <div class="register-body">
            <!-- Step Indicator -->
            <div class="step-indicator">
                <div class="step active">
                    <div class="step-number">1</div>
                    <div class="step-title">Tra cứu VNeID</div>
                </div>
                <div class="step">
                    <div class="step-number">2</div>
                    <div class="step-title">Thông tin tài khoản</div>
                </div>
                <div class="step">
                    <div class="step-number">3</div>
                    <div class="step-title">Hoàn tất</div>
                </div>
            </div>

            <form method="post" asp-action="Register" asp-controller="Account" id="registerForm">
                <div asp-validation-summary="All" class="alert alert-danger" id="validationSummary" style="display:none;"></div>

                <!-- ═══ Step 1 ═══ -->
                <div class="step-content active" id="step1">
                    <div class="section-title">
                        <i class="fas fa-id-card"></i>
                        Bước 1: Tra cứu thông tin công dân
                    </div>

                    <div class="vneid-lookup">
                        <h3><i class="fas fa-search"></i> Tra cứu VNeID</h3>
                        <p>Nhập số CCCD/CMND 12 số để tra cứu thông tin từ cơ sở dữ liệu VNeID</p>

                        <div class="vneid-input-group">
                            <div class="input-wrapper no-right" style="flex:1;">
                                <i class="fas fa-id-card-alt icon-left"></i>
                                <input type="text" id="cccdInput" class="form-control"
                                       placeholder="Nhập 12 số CCCD" maxlength="12" pattern="[0-9]{12}" />
                            </div>
                            <button type="button" class="btn btn-primary" id="btnLookup">
                                <i class="fas fa-search"></i> Tra cứu
                            </button>
                        </div>
                        <span class="text-danger" id="cccdError"></span>
                    </div>

                    <div id="vneidResult" style="display:none;">
                        <div class="vneid-info">
                            <div class="vneid-info-header">
                                <h4><i class="fas fa-user-check"></i> Thông tin công dân</h4>
                                <span class="vneid-verified"><i class="fas fa-check-circle"></i> Đã xác thực</span>
                            </div>
                            <div class="info-grid">
                                <div class="info-item">
                                    <span class="info-label">Số định danh</span>
                                    <span class="info-value" id="displayCCCD">-</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Họ và tên</span>
                                    <span class="info-value" id="displayHoTen">-</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Ngày sinh</span>
                                    <span class="info-value" id="displayNgaySinh">-</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Giới tính</span>
                                    <span class="info-value" id="displayGioiTinh">-</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Quê quán</span>
                                    <span class="info-value" id="displayQueQuan">-</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Nơi thường trú</span>
                                    <span class="info-value" id="displayNoiThuongTru">-</span>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" asp-for="CCCD" id="hiddenCCCD" />
                        <input type="hidden" asp-for="HoTen" id="hiddenHoTen" />
                        <input type="hidden" asp-for="NgaySinh" id="hiddenNgaySinh" />
                        <input type="hidden" asp-for="GioiTinh" id="hiddenGioiTinh" />
                        <input type="hidden" asp-for="DiaChi" id="hiddenDiaChi" />
                        <input type="hidden" asp-for="QueQuan" id="hiddenQueQuan" />

                        <div class="btn-group">
                            <button type="button" class="btn btn-secondary" id="btnChangeCCCD">
                                <i class="fas fa-redo"></i> Tra cứu lại
                            </button>
                            <button type="button" class="btn btn-success" id="btnNextStep1">
                                Tiếp tục <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- ═══ Step 2 ═══ -->
                <div class="step-content" id="step2">
                    <div class="section-title">
                        <i class="fas fa-user-cog"></i>
                        Bước 2: Thông tin tài khoản
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        Thông tin cá nhân đã được lấy từ VNeID. Vui lòng điền thêm thông tin tài khoản.
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Username" class="form-label">Tên đăng nhập <span class="required">*</span></label>
                            <div class="input-wrapper no-right">
                                <i class="fas fa-user icon-left"></i>
                                <input asp-for="Username" class="form-control" placeholder="Chọn tên đăng nhập" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email <span class="required">*</span></label>
                            <div class="input-wrapper no-right">
                                <i class="fas fa-envelope icon-left"></i>
                                <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Mật khẩu <span class="required">*</span></label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock icon-left"></i>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Tối thiểu 6 ký tự" id="regPassword" />
                                <button type="button" class="toggle-pw" onclick="togglePw('regPassword',this)" aria-label="Hiện/Ẩn mật khẩu">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu <span class="required">*</span></label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock icon-left"></i>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" id="regConfirmPassword" />
                                <button type="button" class="toggle-pw" onclick="togglePw('regConfirmPassword',this)" aria-label="Hiện/Ẩn mật khẩu">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="SoDienThoai" class="form-label">Số điện thoại <span class="required">*</span></label>
                        <div class="input-wrapper no-right">
                            <i class="fas fa-phone icon-left"></i>
                            <input asp-for="SoDienThoai" class="form-control" placeholder="Số điện thoại liên hệ" />
                        </div>
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </div>

                    <div class="section-title" style="margin-top:28px;">
                        <i class="fas fa-notes-medical"></i>
                        Thông tin bệnh nhân (Tùy chọn)
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="NhomMau" class="form-label">Nhóm máu</label>
                            <div class="input-wrapper no-right">
                                <i class="fas fa-tint icon-left"></i>
                                <select asp-for="NhomMau" class="form-select">
                                    <option value="">-- Chọn nhóm máu --</option>
                                    <option value="A">A</option>
                                    <option value="B">B</option>
                                    <option value="AB">AB</option>
                                    <option value="O">O</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="NgheNghiep" class="form-label">Nghề nghiệp</label>
                            <div class="input-wrapper no-right">
                                <i class="fas fa-briefcase icon-left"></i>
                                <input asp-for="NgheNghiep" class="form-control" placeholder="Nghề nghiệp hiện tại" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="TienSuDiUng" class="form-label">Tiền sử dị ứng</label>
                        <div class="input-wrapper no-right">
                            <i class="fas fa-exclamation-triangle icon-left" style="top:18px; transform:none;"></i>
                            <textarea asp-for="TienSuDiUng" class="form-control" rows="3"
                                      placeholder="Ghi chú về các loại thuốc hoặc thực phẩm bị dị ứng (nếu có)"
                                      style="padding:12px 18px 12px 44px;"></textarea>
                        </div>
                    </div>

                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary" id="btnBackStep1">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </button>
                        <button type="button" class="btn btn-success" id="btnNextStep2">
                            Tiếp tục <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- ═══ Step 3 ═══ -->
                <div class="step-content" id="step3">
                    <div class="section-title">
                        <i class="fas fa-check-circle"></i>
                        Bước 3: Xác nhận thông tin
                    </div>

                    <div class="alert alert-success">
                        <i class="fas fa-info-circle"></i>
                        Vui lòng kiểm tra lại thông tin trước khi hoàn tất đăng ký.
                    </div>

                    <div class="vneid-info">
                        <h4 style="margin-bottom:18px; color:#1e293b; display:flex; align-items:center; gap:8px;">
                            <i class="fas fa-user" style="color:#38bdf8;"></i> Thông tin cá nhân từ VNeID
                        </h4>
                        <div class="info-grid">
                            <div class="info-item"><span class="info-label">Số CCCD</span><span class="info-value" id="confirmCCCD">-</span></div>
                            <div class="info-item"><span class="info-label">Họ tên</span><span class="info-value" id="confirmHoTen">-</span></div>
                            <div class="info-item"><span class="info-label">Ngày sinh</span><span class="info-value" id="confirmNgaySinh">-</span></div>
                            <div class="info-item"><span class="info-label">Giới tính</span><span class="info-value" id="confirmGioiTinh">-</span></div>
                        </div>
                    </div>

                    <div class="vneid-info">
                        <h4 style="margin-bottom:18px; color:#1e293b; display:flex; align-items:center; gap:8px;">
                            <i class="fas fa-user-cog" style="color:#a78bfa;"></i> Thông tin tài khoản
                        </h4>
                        <div class="info-grid">
                            <div class="info-item"><span class="info-label">Tên đăng nhập</span><span class="info-value" id="confirmUsername">-</span></div>
                            <div class="info-item"><span class="info-label">Email</span><span class="info-value" id="confirmEmail">-</span></div>
                            <div class="info-item"><span class="info-label">Số điện thoại</span><span class="info-value" id="confirmPhone">-</span></div>
                            <div class="info-item"><span class="info-label">Nhóm máu</span><span class="info-value" id="confirmNhomMau">-</span></div>
                        </div>
                    </div>

                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary" id="btnBackStep2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </button>
                        <button type="submit" class="btn btn-success" id="btnSubmit">
                            <i class="fas fa-check"></i> Hoàn tất đăng ký
                        </button>
                    </div>
                </div>
            </form>

            <div class="auth-footer">
                <p>Đã có tài khoản? <a asp-action="Login">Đăng nhập ngay</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        /* ─── Eye toggle ─── */
        function togglePw(id, btn) {
            const inp = document.getElementById(id);
            const ic  = btn.querySelector('i');
            if (inp.type === 'password') {
                inp.type = 'text';
                ic.classList.replace('fa-eye','fa-eye-slash');
            } else {
                inp.type = 'password';
                ic.classList.replace('fa-eye-slash','fa-eye');
            }
        }

        /* ─── Multi-step ─── */
        let currentStep = 1;
        const totalSteps = 3;

        function goToStep(step) {
            if (step < 1 || step > totalSteps) return;

            document.querySelectorAll('.step-content').forEach(el => el.classList.remove('active'));
            document.getElementById('step' + step).classList.add('active');

            document.querySelectorAll('.step').forEach((el, i) => {
                el.classList.remove('active','completed');
                if (i + 1 < step)      el.classList.add('completed');
                else if (i + 1 === step) el.classList.add('active');
            });

            currentStep = step;
            window.scrollTo(0, 0);
        }

        /* ─── VNeID Lookup ─── */
        document.getElementById('btnLookup').addEventListener('click', function () {
            const cccd = document.getElementById('cccdInput').value.trim();
            const err  = document.getElementById('cccdError');
            err.textContent = '';

            if (!cccd || cccd.length !== 12 || !/^\d{12}$/.test(cccd)) {
                err.textContent = 'Vui lòng nhập đúng 12 số CCCD';
                return;
            }

            this.disabled = true;
            this.innerHTML = '<span class="loading-spinner"></span> Đang tra cứu...';

            fetch('/Account/LookupVNeID', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(cccd)
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('displayCCCD').textContent        = data.data.soDinhDanh;
                    document.getElementById('displayHoTen').textContent       = data.data.hoTen;
                    document.getElementById('displayNgaySinh').textContent    = new Date(data.data.ngaySinh).toLocaleDateString('vi-VN');
                    document.getElementById('displayGioiTinh').textContent    = data.data.gioiTinh;
                    document.getElementById('displayQueQuan').textContent     = data.data.queQuan || '-';
                    document.getElementById('displayNoiThuongTru').textContent= data.data.noiThuongTru || data.data.diaChiHienTai || '-';

                    document.getElementById('hiddenCCCD').value      = data.data.soDinhDanh;
                    document.getElementById('hiddenHoTen').value     = data.data.hoTen;
                    document.getElementById('hiddenNgaySinh').value  = data.data.ngaySinh;
                    document.getElementById('hiddenGioiTinh').value  = data.data.gioiTinh;
                    document.getElementById('hiddenDiaChi').value    = data.data.diaChiHienTai || '';
                    document.getElementById('hiddenQueQuan').value   = data.data.queQuan || '';

                    document.getElementById('vneidResult').style.display = 'block';
                    document.querySelector('.vneid-lookup').style.display = 'none';
                } else {
                    err.textContent = data.message || 'Không tìm thấy thông tin công dân';
                }
            })
            .catch(e => { err.textContent = 'Đã xảy ra lỗi khi tra cứu: ' + e.message; })
            .finally(() => {
                this.disabled = false;
                this.innerHTML = '<i class="fas fa-search"></i> Tra cứu';
            });
        });

        document.getElementById('btnChangeCCCD').addEventListener('click', function () {
            document.querySelector('.vneid-lookup').style.display = 'block';
            document.getElementById('vneidResult').style.display = 'none';
            document.getElementById('cccdInput').value = '';
            document.getElementById('cccdError').textContent = '';
        });

        /* ─── Step navigation ─── */
        document.getElementById('btnNextStep1').addEventListener('click', () => goToStep(2));
        document.getElementById('btnBackStep1').addEventListener('click', () => goToStep(1));

        document.getElementById('btnNextStep2').addEventListener('click', function () {
            document.getElementById('confirmCCCD').textContent     = document.getElementById('hiddenCCCD').value;
            document.getElementById('confirmHoTen').textContent    = document.getElementById('hiddenHoTen').value;
            document.getElementById('confirmNgaySinh').textContent = new Date(document.getElementById('hiddenNgaySinh').value).toLocaleDateString('vi-VN');
            document.getElementById('confirmGioiTinh').textContent = document.getElementById('hiddenGioiTinh').value;
            document.getElementById('confirmUsername').textContent  = document.getElementById('Username').value || '-';
            document.getElementById('confirmEmail').textContent     = document.getElementById('Email').value || '-';
            document.getElementById('confirmPhone').textContent     = document.getElementById('SoDienThoai').value || '-';
            document.getElementById('confirmNhomMau').textContent   = document.getElementById('NhomMau').value || 'Chưa xác định';
            goToStep(3);
        });

        document.getElementById('btnBackStep2').addEventListener('click', () => goToStep(2));

        /* Only numbers in CCCD */
        document.getElementById('cccdInput').addEventListener('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
        document.getElementById('cccdInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') { e.preventDefault(); document.getElementById('btnLookup').click(); }
        });
    </script>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
