@model QLPhanPhoiThuoc.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý thuốc bệnh viện</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * { margin:0; padding:0; box-sizing:border-box; }

        body {
            font-family:'Segoe UI',Tahoma,Geneva,Verdana,sans-serif;
            background:linear-gradient(135deg,#0f172a 0%,#1e293b 50%,#0f172a 100%);
            min-height:100vh;
            padding:40px 20px;
            position:relative; overflow-x:hidden;
        }
        body::before {
            content:''; position:fixed; top:-30%; left:-15%;
            width:600px; height:600px;
            background:radial-gradient(circle,rgba(56,189,248,.08) 0%,transparent 70%);
            border-radius:50%; pointer-events:none;
        }
        body::after {
            content:''; position:fixed; bottom:-25%; right:-10%;
            width:500px; height:500px;
            background:radial-gradient(circle,rgba(251,113,133,.07) 0%,transparent 70%);
            border-radius:50%; pointer-events:none;
        }

        /* ─── Card ─── */
        .register-container {
            max-width:900px; margin:0 auto;
            background:#fff;
            border-radius:24px;
            box-shadow:0 25px 60px rgba(0,0,0,.35);
            overflow:hidden;
            position:relative; z-index:1;
        }

        /* ─── Header ─── */
        .register-header {
            background:linear-gradient(160deg,#1e3a5f 0%,#0f2847 50%,#162d4a 100%);
            padding:42px 40px 36px;
            text-align:center;
            color:#fff;
            position:relative; overflow:hidden;
        }
        .register-header::before {
            content:''; position:absolute; top:-50%; right:-30%;
            width:70%; height:70%;
            background:radial-gradient(circle,rgba(56,189,248,.1) 0%,transparent 70%);
            border-radius:50%;
        }
        .register-header::after {
            content:''; position:absolute; bottom:-50%; left:-25%;
            width:60%; height:60%;
            background:radial-gradient(circle,rgba(251,113,133,.08) 0%,transparent 70%);
            border-radius:50%;
        }
        .register-header > * { position:relative; z-index:1; }

        .register-header h1 { font-size:2.1rem; font-weight:700; margin-bottom:8px; }
        .register-header p  { font-size:.95rem; opacity:.8; color:#cbd5e1; }

        .vneid-badge {
            display:inline-flex; align-items:center; gap:6px;
            background:rgba(255,255,255,.15);
            padding:8px 20px; border-radius:25px;
            margin-top:14px; font-size:.88rem; font-weight:600;
            backdrop-filter:blur(4px);
        }
        .vneid-badge i { color:#fbbf24; }

        /* ─── Body ─── */
        .register-body { padding:40px 50px; background:#fafbfc; }

        /* ─── Step Indicator ─── */
        .step-indicator {
            display:flex; justify-content:center;
            margin-bottom:38px; position:relative;
        }
        .step {
            display:flex; flex-direction:column; align-items:center;
            position:relative; flex:1; max-width:200px;
        }
        .step-number {
            width:48px; height:48px; border-radius:14px;
            background:#e2e8f0; color:#94a3b8;
            display:flex; align-items:center; justify-content:center;
            font-weight:700; font-size:1.1rem;
            margin-bottom:10px; position:relative; z-index:2;
            transition:all .3s;
        }
        .step.active .step-number {
            background:linear-gradient(135deg,#1e3a5f,#162d4a);
            color:#fff;
            box-shadow:0 6px 18px rgba(30,58,95,.35);
        }
        .step.completed .step-number {
            background:linear-gradient(135deg,#4ade80,#22c55e);
            color:#fff;
            box-shadow:0 4px 12px rgba(74,222,128,.3);
        }
        .step-title { font-size:.82rem; color:#94a3b8; text-align:center; font-weight:600; }
        .step.active .step-title { color:#38bdf8; }
        .step.completed .step-title { color:#4ade80; }

        /* connector line */
        .step::after {
            content:''; position:absolute; top:24px; left:50%;
            width:100%; height:3px;
            background:#e2e8f0; z-index:1;
            border-radius:2px;
        }
        .step:last-child::after { display:none; }
        .step.completed::after { background:linear-gradient(90deg,#4ade80,#e2e8f0); }

        /* ─── Step Content ─── */
        .step-content { display:none; }
        .step-content.active {
            display:block;
            animation:fadeIn .4s ease;
        }
        @@keyframes fadeIn {
            from { opacity:0; transform:translateY(16px); }
            to   { opacity:1; transform:translateY(0); }
        }

        /* ─── Section title ─── */
        .section-title {
            font-size:1.3rem; color:#0f172a; margin-bottom:22px;
            font-weight:700; display:flex; align-items:center; gap:10px;
        }
        .section-title i { color:#38bdf8; }

        /* ─── Form rows ─── */
        .form-row { display:grid; grid-template-columns:1fr 1fr; gap:20px; margin-bottom:18px; }
        .form-group { margin-bottom:18px; }
        .form-label {
            display:block; margin-bottom:7px; color:#1e293b;
            font-weight:600; font-size:.88rem; letter-spacing:.2px;
        }
        .form-label .required { color:#fb7185; margin-left:3px; }

        /* ─── Input wrapper ─── */
        .input-wrapper { position:relative; }
        .input-wrapper .icon-left {
            position:absolute; left:15px; top:50%;
            transform:translateY(-50%); color:#94a3b8;
            font-size:1rem; pointer-events:none; z-index:2;
        }
        .input-wrapper .toggle-pw {
            position:absolute; right:14px; top:50%;
            transform:translateY(-50%); color:#94a3b8;
            font-size:1rem; cursor:pointer; z-index:2;
            background:none; border:none; padding:5px;
            border-radius:7px; transition:color .2s, background .2s;
            display:flex; align-items:center; justify-content:center;
        }
        .input-wrapper .toggle-pw:hover { color:#1e3a5f; background:rgba(30,58,95,.07); }

        .form-control, .form-select {
            width:100%; padding:12px 44px 12px 44px;
            border:2px solid #e2e8f0; border-radius:12px;
            font-size:.94rem; color:#0f172a; background:#fff;
            transition:border-color .25s, box-shadow .25s;
        }
        .form-control:focus, .form-select:focus {
            outline:none; border-color:#38bdf8;
            box-shadow:0 0 0 3px rgba(56,189,248,.18);
        }
        .form-control::placeholder { color:#94a3b8; }
        .form-control:disabled { background:#f1f5f9; color:#64748b; cursor:not-allowed; }

        /* ─── Alerts ─── */
        .alert { padding:16px 20px; border-radius:10px; margin-bottom:22px; display:flex; align-items:flex-start; gap:12px; }
        .alert ul { margin:0; padding-left:20px; flex:1; }
        .alert li { margin-bottom:5px; }
        .alert i { margin-top:2px; font-size:1.2rem; }

        .alert-danger {
            background:linear-gradient(135deg,#fef2f2,#fee2e2);
            border-left:4px solid #f87171; color:#991b1b;
        }
        .alert-success {
            background:linear-gradient(135deg,#f0fdf4,#dcfce7);
            border-left:4px solid #4ade80; color:#166534;
        }
        .alert-info {
            background:linear-gradient(135deg,#f0f9ff,#e0f2fe);
            border-left:4px solid #38bdf8; color:#075985;
        }

        /* ─── Buttons ─── */
        .btn { padding:12px 28px; border:none; border-radius:10px; font-weight:600; font-size:.94rem; cursor:pointer; transition:all .3s; display:inline-flex; align-items:center; gap:8px; }
        .btn-primary {
            background:linear-gradient(135deg,#1e3a5f,#162d4a);
            color:#fff;
            box-shadow:0 4px 12px rgba(30,58,95,.25);
        }
        .btn-primary:hover { transform:translateY(-2px); box-shadow:0 6px 20px rgba(30,58,95,.35); }
        .btn-secondary {
            background:#f1f5f9; color:#1e293b;
            box-shadow:0 2px 8px rgba(0,0,0,.08);
        }
        .btn-secondary:hover { background:#e2e8f0; }
        .btn-success {
            background:linear-gradient(135deg,#4ade80,#22c55e);
            color:#fff;
            box-shadow:0 4px 12px rgba(74,222,128,.25);
        }
        .btn-success:hover { transform:translateY(-2px); box-shadow:0 6px 20px rgba(74,222,128,.35); }
        .btn-outline {
            background:transparent;
            border:2px solid #1e3a5f;
            color:#1e3a5f;
        }
        .btn-outline:hover { background:#1e3a5f; color:#fff; }

        .btn:disabled { opacity:.5; cursor:not-allowed; transform:none !important; }

        .btn-group { display:flex; gap:12px; margin-top:28px; justify-content:flex-end; }

        /* ─── Loading spinner ─── */
        .loading-spinner {
            display:inline-block; width:14px; height:14px;
            border:2px solid rgba(255,255,255,.3);
            border-top-color:#fff;
            border-radius:50%; animation:spin .6s linear infinite;
        }
        @@keyframes spin { to { transform:rotate(360deg); } }

        /* ─── VNeID result ─── */
        .vneid-result {
            display:none; background:linear-gradient(135deg,#f0f9ff,#e0f2fe);
            border:2px solid #38bdf8; border-radius:14px; padding:25px;
            margin-bottom:22px;
        }
        .vneid-result .info-grid {
            display:grid; grid-template-columns:1fr 1fr; gap:16px;
        }
        .vneid-result .info-item {
            display:flex; flex-direction:column; gap:5px;
        }
        .vneid-result .info-label {
            font-size:.82rem; color:#0369a1; font-weight:600; text-transform:uppercase; letter-spacing:.5px;
        }
        .vneid-result .info-value {
            font-size:1rem; color:#0f172a; font-weight:600;
        }
        .vneid-result .btn-change {
            margin-top:16px; padding:10px 20px; font-size:.88rem;
        }

        /* ─── Confirmation ─── */
        .confirm-section { margin-bottom:28px; }
        .confirm-section h3 {
            font-size:1.1rem; color:#1e3a5f; margin-bottom:14px;
            font-weight:700; display:flex; align-items:center; gap:8px;
        }
        .confirm-section h3 i { color:#38bdf8; font-size:1rem; }
        .confirm-grid {
            display:grid; grid-template-columns:1fr 1fr; gap:16px;
            background:#f8fafc; border-radius:12px; padding:20px;
        }
        .confirm-item {
            display:flex; flex-direction:column; gap:5px;
        }
        .confirm-item .label {
            font-size:.82rem; color:#64748b; font-weight:600;
        }
        .confirm-item .value {
            font-size:1rem; color:#0f172a; font-weight:600;
        }

        /* ─── Checkbox ─── */
        .checkbox-wrapper {
            display:flex; align-items:flex-start; gap:10px;
            padding:14px; background:#f8fafc; border-radius:10px;
            margin-bottom:18px; cursor:pointer; transition:background .2s;
        }
        .checkbox-wrapper:hover { background:#f1f5f9; }
        .checkbox-wrapper input[type="checkbox"] {
            margin-top:3px; width:18px; height:18px; cursor:pointer;
        }
        .checkbox-wrapper label {
            flex:1; cursor:pointer; color:#334155; font-size:.9rem; line-height:1.5;
        }
        .checkbox-wrapper label a { color:#1e3a5f; text-decoration:underline; }
        .checkbox-wrapper label a:hover { color:#0f2847; }

        /* ─── Text danger ─── */
        .text-danger { color:#dc2626; font-size:.85rem; margin-top:6px; display:block; }

        /* ─── Responsive ─── */
        @@media (max-width: 768px) {
            .register-container { margin:0 15px; }
            .register-header { padding:30px 25px 25px; }
            .register-header h1 { font-size:1.6rem; }
            .register-body { padding:30px 25px; }
            .form-row { grid-template-columns:1fr; gap:0; }
            .step-indicator { gap:0; }
            .step { max-width:none; }
            .step-title { font-size:.75rem; }
            .step-number { width:40px; height:40px; font-size:.95rem; }
            .vneid-result .info-grid { grid-template-columns:1fr; }
            .confirm-grid { grid-template-columns:1fr; }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <!-- Header -->
        <div class="register-header">
            <h1><i class="fas fa-user-plus"></i> Đăng ký tài khoản</h1>
            <p>Tạo tài khoản mới để sử dụng hệ thống quản lý thuốc bệnh viện</p>
            <div class="vneid-badge">
                <i class="fas fa-shield-alt"></i>
                Xác thực qua VNeID
            </div>
        </div>

        <!-- Body -->
        <div class="register-body">
            <!-- Step Indicator -->
            <div class="step-indicator">
                <div class="step active">
                    <div class="step-number">1</div>
                    <div class="step-title">Xác minh VNeID</div>
                </div>
                <div class="step">
                    <div class="step-number">2</div>
                    <div class="step-title">Thông tin tài khoản</div>
                </div>
                <div class="step">
                    <div class="step-number">3</div>
                    <div class="step-title">Xác nhận</div>
                </div>
            </div>

            <form asp-action="Register" method="post">
                <!-- Hidden fields to store VNeID data -->
                <input type="hidden" id="hiddenCCCD" asp-for="CCCD" />
                <input type="hidden" id="hiddenHoTen" asp-for="HoTen" />
                <input type="hidden" id="hiddenNgaySinh" asp-for="NgaySinh" />
                <input type="hidden" id="hiddenGioiTinh" asp-for="GioiTinh" />
                <input type="hidden" id="hiddenDiaChi" asp-for="DiaChi" />
                <input type="hidden" id="hiddenQueQuan" asp-for="QueQuan" />

                <!--═══ ═══ Step 1 ═══ ═══-->
                <div class="step-content active" id="step1">
                    <div class="section-title">
                        <i class="fas fa-shield-alt"></i>
                        Bước 1: Xác minh danh tính qua VNeID
                    </div>

                    <!-- Lookup form -->
                    <div class="vneid-lookup">
                        <div class="form-group">
                            <label class="form-label">Số CCCD/CMND <span class="required">*</span></label>
                            <div class="input-wrapper">
                                <i class="fas fa-id-card icon-left"></i>
                                <input type="text" class="form-control" id="cccdInput" placeholder="Nhập 12 số CCCD" maxlength="12" autocomplete="off" />
                            </div>
                            <span class="text-danger" id="cccdError"></span>
                        </div>
                        <button type="button" class="btn btn-primary" id="btnLookup">
                            <i class="fas fa-search"></i> Tra cứu
                        </button>
                    </div>

                    <!-- VNeID result -->
                    <div class="vneid-result" id="vneidResult">
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i>
                            <div>
                                <strong>Xác thực thành công!</strong><br />
                                Thông tin công dân đã được tìm thấy trong hệ thống VNeID.
                            </div>
                        </div>
                        <div class="info-grid">
                            <div class="info-item">
                                <div class="info-label">Số CCCD</div>
                                <div class="info-value" id="displayCCCD">-</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Họ và tên</div>
                                <div class="info-value" id="displayHoTen">-</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Ngày sinh</div>
                                <div class="info-value" id="displayNgaySinh">-</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Giới tính</div>
                                <div class="info-value" id="displayGioiTinh">-</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Quê quán</div>
                                <div class="info-value" id="displayQueQuan">-</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Nơi thường trú</div>
                                <div class="info-value" id="displayNoiThuongTru">-</div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-outline btn-change" id="btnChangeCCCD">
                            <i class="fas fa-sync-alt"></i> Đổi số CCCD
                        </button>
                    </div>

                    <div class="btn-group">
                        <button type="button" class="btn btn-success" id="btnNextStep1">
                            Tiếp tục <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!--═══ ═══ Step 2 ═══ ═══-->
                <div class="step-content" id="step2">
                    <div class="section-title">
                        <i class="fas fa-user-cog"></i>
                        Bước 2: Tạo thông tin tài khoản
                    </div>

                    <!-- Error container -->
                    <div class="alert alert-danger" id="step2Errors" style="display:none;">
                        <i class="fas fa-exclamation-triangle"></i>
                        <div>
                            <strong>Vui lòng kiểm tra lại thông tin:</strong>
                            <ul id="step2ErrorList"></ul>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" asp-for="Username">Tên đăng nhập <span class="required">*</span></label>
                            <div class="input-wrapper">
                                <i class="fas fa-user icon-left"></i>
                                <input type="text" class="form-control" asp-for="Username" placeholder="VD: nguyen_van_a" autocomplete="off" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="Email">Email <span class="required">*</span></label>
                            <div class="input-wrapper">
                                <i class="fas fa-envelope icon-left"></i>
                                <input type="email" class="form-control" asp-for="Email" placeholder="example@email.com" autocomplete="off" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" asp-for="SoDienThoai">Số điện thoại <span class="required">*</span></label>
                            <div class="input-wrapper">
                                <i class="fas fa-phone icon-left"></i>
                                <input type="text" class="form-control" asp-for="SoDienThoai" placeholder="0912345678" maxlength="10" autocomplete="off" />
                            </div>
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="NhomMau">Nhóm máu</label>
                            <div class="input-wrapper">
                                <i class="fas fa-tint icon-left"></i>
                                <select class="form-select" asp-for="NhomMau">
                                    <option value="">-- Chọn nhóm máu --</option>
                                    <option value="A">A</option>
                                    <option value="B">B</option>
                                    <option value="AB">AB</option>
                                    <option value="O">O</option>
                                    <option value="A+">A+</option>
                                    <option value="A-">A-</option>
                                    <option value="B+">B+</option>
                                    <option value="B-">B-</option>
                                    <option value="AB+">AB+</option>
                                    <option value="AB-">AB-</option>
                                    <option value="O+">O+</option>
                                    <option value="O-">O-</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" asp-for="Password">Mật khẩu <span class="required">*</span></label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock icon-left"></i>
                                <input type="password" class="form-control" asp-for="Password" placeholder="••••••••" id="Password" />
                                <button type="button" class="toggle-pw" data-target="Password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="ConfirmPassword">Xác nhận mật khẩu <span class="required">*</span></label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock icon-left"></i>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="••••••••" id="ConfirmPassword" />
                                <button type="button" class="toggle-pw" data-target="ConfirmPassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <div>
                            <strong>Yêu cầu mật khẩu:</strong><br />
                            • Tối thiểu 8 ký tự<br />
                            • Bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt
                        </div>
                    </div>

                    <div class="checkbox-wrapper">
                        <input type="checkbox" asp-for="AgreeTerms" id="AgreeTerms" />
                        <label asp-for="AgreeTerms">
                            Tôi đồng ý với <a href="#" target="_blank">Điều khoản sử dụng</a> 
                        </label>
                    </div>
                    <span asp-validation-for="AgreeTerms" class="text-danger"></span>

                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary" id="btnBackStep1">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </button>
                        <button type="button" class="btn btn-success" id="btnNextStep2">
                            Tiếp tục <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!--═══ ═══ Step 3 ═══ ═══-->
                <div class="step-content" id="step3">
                    <div class="section-title">
                        <i class="fas fa-check-circle"></i>
                        Bước 3: Xác nhận thông tin
                    </div>

                    <div class="alert alert-success">
                        <i class="fas fa-info-circle"></i>
                        <span>Vui lòng kiểm tra lại thông tin trước khi hoàn tất đăng ký.</span>
                    </div>

                    <!-- Thông tin cá nhân từ VNeID -->
                    <div class="confirm-section">
                        <h3><i class="fas fa-user"></i> Thông tin cá nhân</h3>
                        <div class="confirm-grid">
                            <div class="confirm-item">
                                <div class="label">Số CCCD</div>
                                <div class="value" id="confirmCCCD">-</div>
                            </div>
                            <div class="confirm-item">
                                <div class="label">Họ và tên</div>
                                <div class="value" id="confirmHoTen">-</div>
                            </div>
                            <div class="confirm-item">
                                <div class="label">Ngày sinh</div>
                                <div class="value" id="confirmNgaySinh">-</div>
                            </div>
                            <div class="confirm-item">
                                <div class="label">Giới tính</div>
                                <div class="value" id="confirmGioiTinh">-</div>
                            </div>
                        </div>
                    </div>

                    <!-- Thông tin tài khoản -->
                    <div class="confirm-section">
                        <h3><i class="fas fa-user-cog"></i> Thông tin tài khoản</h3>
                        <div class="confirm-grid">
                            <div class="confirm-item">
                                <div class="label">Tên đăng nhập</div>
                                <div class="value" id="confirmUsername">-</div>
                            </div>
                            <div class="confirm-item">
                                <div class="label">Email</div>
                                <div class="value" id="confirmEmail">-</div>
                            </div>
                            <div class="confirm-item">
                                <div class="label">Số điện thoại</div>
                                <div class="value" id="confirmPhone">-</div>
                            </div>
                            <div class="confirm-item">
                                <div class="label">Nhóm máu</div>
                                <div class="value" id="confirmNhomMau">-</div>
                            </div>
                        </div>
                    </div>

                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary" id="btnBackStep2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </button>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check"></i> Hoàn tất đăng ký
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        /* ─── Toggle password visibility ─── */
        document.querySelectorAll('.toggle-pw').forEach(btn => {
            btn.addEventListener('click', function () {
                const target = document.getElementById(this.dataset.target);
                const icon = this.querySelector('i');
                if (target.type === 'password') {
                    target.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    target.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        });

        /* ─── Step navigation ─── */
        const totalSteps = 3;
        let currentStep = 1;

        function goToStep(step) {
            if (step < 1 || step > totalSteps) return;

            document.querySelectorAll('.step-content').forEach(el => el.classList.remove('active'));
            document.getElementById('step' + step).classList.add('active');

            document.querySelectorAll('.step').forEach((el, i) => {
                el.classList.remove('active','completed');
                if (i + 1 < step)      el.classList.add('completed');
                else if (i + 1 === step) el.classList.add('active');
            });

            currentStep = step;
            window.scrollTo(0, 0);
        }

        /* ─── VNeID Lookup ─── */
        document.getElementById('btnLookup').addEventListener('click', function () {
            const cccd = document.getElementById('cccdInput').value.trim();
            const err  = document.getElementById('cccdError');
            err.textContent = '';

            if (!cccd || cccd.length !== 12 || !/^\d{12}$/.test(cccd)) {
                err.textContent = 'Vui lòng nhập đúng 12 số CCCD';
                return;
            }

            this.disabled = true;
            this.innerHTML = '<span class="loading-spinner"></span> Đang tra cứu...';

            fetch('/Account/LookupVNeID', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(cccd)
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('displayCCCD').textContent        = data.data.soDinhDanh;
                    document.getElementById('displayHoTen').textContent       = data.data.hoTen;
                    document.getElementById('displayNgaySinh').textContent    = new Date(data.data.ngaySinh).toLocaleDateString('vi-VN');
                    document.getElementById('displayGioiTinh').textContent    = data.data.gioiTinh;
                    document.getElementById('displayQueQuan').textContent     = data.data.queQuan || '-';
                    document.getElementById('displayNoiThuongTru').textContent= data.data.noiThuongTru || data.data.diaChiHienTai || '-';

                    document.getElementById('hiddenCCCD').value      = data.data.soDinhDanh;
                    document.getElementById('hiddenHoTen').value     = data.data.hoTen;
                    document.getElementById('hiddenNgaySinh').value  = data.data.ngaySinh;
                    document.getElementById('hiddenGioiTinh').value  = data.data.gioiTinh;
                    document.getElementById('hiddenDiaChi').value    = data.data.diaChiHienTai || '';
                    document.getElementById('hiddenQueQuan').value   = data.data.queQuan || '';

                    // Cập nhật thông tin xác nhận ở step 3
                    document.getElementById('confirmCCCD').textContent = data.data.soDinhDanh;
                    document.getElementById('confirmHoTen').textContent = data.data.hoTen;
                    document.getElementById('confirmNgaySinh').textContent = new Date(data.data.ngaySinh).toLocaleDateString('vi-VN');
                    document.getElementById('confirmGioiTinh').textContent = data.data.gioiTinh;

                    document.getElementById('vneidResult').style.display = 'block';
                    document.querySelector('.vneid-lookup').style.display = 'none';
                } else {
                    err.textContent = data.message || 'Không tìm thấy thông tin công dân';
                }
            })
            .catch(e => { err.textContent = 'Đã xảy ra lỗi khi tra cứu: ' + e.message; })
            .finally(() => {
                this.disabled = false;
                this.innerHTML = '<i class="fas fa-search"></i> Tra cứu';
            });
        });

        document.getElementById('btnChangeCCCD').addEventListener('click', function () {
            document.querySelector('.vneid-lookup').style.display = 'block';
            document.getElementById('vneidResult').style.display = 'none';
            document.getElementById('cccdInput').value = '';
            document.getElementById('cccdError').textContent = '';
        });

        /* ─── Step navigation ─── */
        document.getElementById('btnNextStep1').addEventListener('click', () => goToStep(2));
        document.getElementById('btnBackStep1').addEventListener('click', () => goToStep(1));

        document.getElementById('btnNextStep2').addEventListener('click', function () {
            // Lấy giá trị từ form
            const username = document.getElementById('Username').value.trim();
            const email = document.getElementById('Email').value.trim();
            const phone = document.getElementById('SoDienThoai').value.trim();
            const password = document.getElementById('Password').value;
            const confirmPassword = document.getElementById('ConfirmPassword').value;
            const agree = document.getElementById('AgreeTerms').checked;

            // Reset error display
            const errorContainer = document.getElementById('step2Errors');
            const errorList = document.getElementById('step2ErrorList');
            errorList.innerHTML = '';
            errorContainer.style.display = 'none';
            
            let errors = [];

            // Validation
            if (!username) {
                errors.push("Vui lòng nhập tên đăng nhập.");
            } else if (username.length < 4 || username.length > 50) {
                errors.push("Tên đăng nhập phải từ 4-50 ký tự.");
            } else if (!/^[a-zA-Z0-9_]+$/.test(username)) {
                errors.push("Tên đăng nhập chỉ được chứa chữ cái, số và dấu gạch dưới.");
            }

            if (!email) {
                errors.push("Vui lòng nhập email.");
            } else if (!/^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/.test(email)) {
                errors.push("Địa chỉ email không hợp lệ.");
            }

            if (!phone) {
                errors.push("Vui lòng nhập số điện thoại.");
            } else if (!/^(0[3|5|7|8|9])+([0-9]{8})$/.test(phone)) {
                errors.push("Số điện thoại không đúng định dạng (VD: 0912345678).");
            }

            if (!password) {
                errors.push("Vui lòng nhập mật khẩu.");
            } else if (password.length < 8) {
                errors.push("Mật khẩu phải có ít nhất 8 ký tự.");
            } else if (!/^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@@#$%^&*()_+{}:;<>,.?~-]).{8,}$/.test(password)) {
                errors.push("Mật khẩu phải bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt.");
            }

            if (!confirmPassword) {
                errors.push("Vui lòng nhập xác nhận mật khẩu.");
            } else if (password !== confirmPassword) {
                errors.push("Mật khẩu xác nhận không khớp.");
            }

            if (!agree) {
                errors.push("Bạn phải đồng ý với điều khoản sử dụng.");
            }

            // Hiển thị lỗi nếu có
            if (errors.length > 0) {
                errorContainer.style.display = 'flex';
                errors.forEach(err => {
                    const li = document.createElement('li');
                    li.textContent = err;
                    errorList.appendChild(li);
                });
                window.scrollTo({ top: 0, behavior: 'smooth' });
                return;
            }

            // Nếu validation pass, cập nhật thông tin ở step 3
            document.getElementById('confirmUsername').textContent = username;
            document.getElementById('confirmEmail').textContent = email;
            document.getElementById('confirmPhone').textContent = phone;
            document.getElementById('confirmNhomMau').textContent = document.getElementById('NhomMau').value || "Chưa xác định";

            // Chuyển sang step 3
            goToStep(3);
        });

        document.getElementById('btnBackStep2').addEventListener('click', () => goToStep(2));

        /* Only numbers in CCCD */
        document.getElementById('cccdInput').addEventListener('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
        document.getElementById('cccdInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') { e.preventDefault(); document.getElementById('btnLookup').click(); }
        });

        /* Only numbers in phone */
        document.getElementById('SoDienThoai').addEventListener('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
</body>
