@model QLPhanPhoiThuoc.Models.Entities.NhaCungCap

@{
    ViewData["Title"] = "Chi tiết nhà cung cấp";
    // KHÔNG có Layout khi load qua AJAX
    if (Context.Request.Headers["X-Requested-With"] != "XMLHttpRequest")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    var tongPhieuNhap = ViewData["TongPhieuNhap"] as int? ?? 0;
    var tongGiaTriNhap = ViewData["TongGiaTriNhap"] as decimal? ?? 0;
    var phieuNhapGanDay = ViewData["PhieuNhapGanDay"] as List<QLPhanPhoiThuoc.Models.Entities.PhieuNhap>;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-info-circle text-info"></i> Chi tiết nhà cung cấp
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index">Nhà cung cấp</a></li>
                    <li class="breadcrumb-item active">@Model.TenNCC</li>
                </ol>
            </nav>
        </div>
        <div>
          
            <a href="javascript:void(0)" onclick="loadThuocContent('/Admin/NhaCungCap/Edit/@Model.MaNCC')" class="btn btn-warning">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a href="javascript:void(0)" onclick="closePanel(panelStack[panelStack.length - 1].level)" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Cột trái: Thông tin chi tiết -->
        <div class="col-md-8">
            <!-- Thông tin cơ bản -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-building"></i> Thông tin cơ bản</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Mã nhà cung cấp</label>
                            <p class="mb-0">
                                <span class="badge bg-secondary fs-6">@Model.MaNCC</span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Trạng thái</label>
                            <p class="mb-0">
                                @switch (Model.TrangThai)
                                {
                                    case "HoatDong":
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check-circle"></i> Đang hoạt động
                                        </span>
                                        break;
                                    case "NgungHopTac":
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-times-circle"></i> Ngừng hợp tác
                                        </span>
                                        break;
                                    case "TamNgung":
                                        <span class="badge bg-warning text-dark fs-6">
                                            <i class="fas fa-pause-circle"></i> Tạm ngừng
                                        </span>
                                        break;
                                }
                            </p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Tên nhà cung cấp</label>
                        <p class="mb-0 fw-bold fs-5">@Model.TenNCC</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">
                                <i class="fas fa-phone-alt text-primary"></i> Số điện thoại
                            </label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.SoDienThoai))
                                {
                                    <a href="tel:@Model.SoDienThoai" class="text-decoration-none">
                                        @Model.SoDienThoai
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">
                                <i class="fas fa-envelope text-primary"></i> Email
                            </label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <a href="mailto:@Model.Email" class="text-decoration-none">
                                        @Model.Email
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">
                            <i class="fas fa-file-invoice text-primary"></i> Mã số thuế
                        </label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.MaSoThue))
                            {
                                <span class="badge bg-info fs-6">@Model.MaSoThue</span>
                            }
                            else
                            {
                                <span class="text-muted">Chưa cập nhật</span>
                            }
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">
                            <i class="fas fa-map-marker-alt text-primary"></i> Địa chỉ
                        </label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.DiaChi))
                            {
                                @Model.DiaChi
                            }
                            else
                            {
                                <span class="text-muted">Chưa cập nhật</span>
                            }
                        </p>
                    </div>



                    <div class="pt-3 border-top">
                        <small class="text-muted">
                            <i class="fas fa-calendar-alt"></i>
                            Ngày tạo: <strong>@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</strong>
                        </small>
                    </div>
                </div>
            </div>

            <!-- Lịch sử phiếu nhập gần đây -->
            @if (phieuNhapGanDay != null && phieuNhapGanDay.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-history"></i> Lịch sử phiếu nhập gần đây
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã phiếu</th>
                                        <th>Ngày nhập</th>
                                        <th>Kho</th>
                                        <th class="text-end">Tổng tiền</th>
                                        <th class="text-center">Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var phieu in phieuNhapGanDay)
                                    {
                                        <tr>
                                            <td>
                                                <a href="#" class="text-decoration-none">
                                                    <strong>@phieu.MaPhieuNhap</strong>
                                                </a>
                                            </td>
                                            <td>@phieu.NgayNhap.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <small class="text-muted">@phieu.MaKho</small>
                                            </td>
                                            <td class="text-end">
                                                <strong class="text-primary">
                                                    @phieu.TongTien.ToString("N0") đ
                                                </strong>
                                            </td>
                                            <td class="text-center">
                                                @switch (phieu.TrangThai)
                                                {
                                                    case "HoanThanh":
                                                        <span class="badge bg-success">Hoàn thành</span>
                                                        break;
                                                    case "DangNhap":
                                                        <span class="badge bg-warning">Đang nhập</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@phieu.TrangThai</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-white text-center">
                        <a href="#" class="btn btn-sm btn-outline-info">
                            <i class="fas fa-list"></i> Xem tất cả phiếu nhập
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-0">Chưa có phiếu nhập nào từ nhà cung cấp này</p>
                    </div>
                </div>
            }
        </div>

        <!-- Cột phải: Thống kê -->
        <div class="col-md-4">
            <!-- Thống kê tổng quan -->
            <div class="card shadow-sm mb-3 bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white">
                    <h6 class="mb-3">
                        <i class="fas fa-chart-bar"></i> Thống kê tổng quan
                    </h6>

                    <div class="mb-3 pb-3 border-bottom border-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Tổng phiếu nhập</span>
                            <h4 class="mb-0">@tongPhieuNhap</h4>
                        </div>
                    </div>

                    <div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Tổng giá trị</span>
                            <h5 class="mb-0">@tongGiaTriNhap.ToString("N0") đ</h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thông tin liên hệ nhanh -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-phone-volume"></i> Liên hệ nhanh
                    </h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.SoDienThoai))
                    {
                        <a href="tel:@Model.SoDienThoai" class="btn btn-success w-100 mb-2">
                            <i class="fas fa-phone-alt"></i> Gọi điện
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <a href="mailto:@Model.Email" class="btn btn-info w-100">
                            <i class="fas fa-envelope"></i> Gửi email
                        </a>
                    }
                    @if (string.IsNullOrEmpty(Model.SoDienThoai) && string.IsNullOrEmpty(Model.Email))
                    {
                        <p class="text-muted text-center mb-0">
                            <small>Chưa có thông tin liên hệ</small>
                        </p>
                    }
                </div>
            </div>

            <!-- Thao tác nhanh -->
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="fas fa-bolt"></i> Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <a asp-controller="PhieuNhap" asp-action="Create" asp-route-maNCC="@Model.MaNCC"
                       class="btn btn-primary w-100 mb-2">
                        <i class="fas fa-plus"></i> Tạo phiếu nhập mới
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.MaNCC" class="btn btn-warning w-100 mb-2">
                        <i class="fas fa-edit"></i> Chỉnh sửa thông tin
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.MaNCC" class="btn btn-danger w-100">
                        <i class="fas fa-trash-alt"></i> Xóa nhà cung cấp
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Có thể thêm các script tương tác nếu cần
    </script>
}
