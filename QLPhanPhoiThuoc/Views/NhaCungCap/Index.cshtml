@model IEnumerable<QLPhanPhoiThuoc.Models.Entities.NhaCungCap>

@{
    ViewData["Title"] = "Quản lý Nhà cung cấp";
    // KHÔNG có Layout khi load qua AJAX (trong panel)
    if (Context.Request.Headers["X-Requested-With"] != "XMLHttpRequest")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-truck-loading text-primary"></i> Quản lý Nhà cung cấp
            </h2>
            <p class="text-muted mb-0">Danh sách các nhà cung cấp thuốc và vật tư y tế</p>
        </div>
        <a href="javascript:void(0)" onclick="loadThuocContent('/Admin/NhaCungCap/Create')" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm nhà cung cấp mới
        </a>
    </div>

    <!-- Thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Card chính -->
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <form asp-action="Index" method="get" class="row g-3" id="filterForm">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                               class="form-control" placeholder="Tìm kiếm theo tên, mã NCC, mã số thuế..." />
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="trangThai" class="form-select">
                        <option value="">-- Tất cả trạng thái --</option>
                        <option value="HoatDong" selected="@(ViewData["TrangThaiFilter"]?.ToString() == "HoatDong")">Đang hoạt động</option>
                        <option value="NgungHopTac" selected="@(ViewData["TrangThaiFilter"]?.ToString() == "NgungHopTac")">Ngừng hợp tác</option>
                        <option value="TamNgung" selected="@(ViewData["TrangThaiFilter"]?.ToString() == "TamNgung")">Tạm ngừng</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Lọc
                    </button>
                    <a href="javascript:void(0)" onclick="loadThuocContent('/Admin/NhaCungCap/Index')" class="btn btn-outline-secondary">
                        <i class="fas fa-redo"></i> Đặt lại
                    </a>
                </div>
            </form>
        </div>

        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 8%">Mã NCC</th>
                                <th style="width: 20%">Tên nhà cung cấp</th>
                                <th style="width: 15%">Số điện thoại</th>
                                <th style="width: 12%">Mã số thuế</th>
                                <th style="width: 20%">Địa chỉ</th>
                                <th style="width: 10%" class="text-center">Trạng thái</th>
                                <th style="width: 15%" class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">@item.MaNCC</span>
                                    </td>
                                    <td>
                                        <strong>@item.TenNCC</strong>
                                        @if (!string.IsNullOrEmpty(item.Email))
                                        {
                                            <br />
                                            <small class="text-muted">
                                                <i class="fas fa-envelope"></i> @item.Email
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.SoDienThoai))
                                        {
                                            <i class="fas fa-phone-alt text-primary"></i>
                                            <span>@item.SoDienThoai</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.MaSoThue))
                                        {
                                            <span class="badge bg-info">@item.MaSoThue</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@(string.IsNullOrEmpty(item.DiaChi) ? "Chưa cập nhật" : item.DiaChi)</small>
                                    </td>
                                    <td class="text-center">
                                        @switch (item.TrangThai)
                                        {
                                            case "HoatDong":
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Hoạt động
                                                </span>
                                                break;
                                            case "NgungHopTac":
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times-circle"></i> Ngừng hợp tác
                                                </span>
                                                break;
                                            case "TamNgung":
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-pause-circle"></i> Tạm ngừng
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@item.TrangThai</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="javascript:void(0)" onclick="loadThuocContent('/Admin/NhaCungCap/Details/@item.MaNCC')"
                                               class="btn btn-sm btn-info" title="Chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="javascript:void(0)" onclick="loadThuocContent('/Admin/NhaCungCap/Edit/@item.MaNCC')"
                                               class="btn btn-sm btn-warning" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="javascript:void(0)" onclick="loadThuocContent('/Admin/NhaCungCap/Delete/@item.MaNCC')"
                                               class="btn btn-sm btn-danger" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>

                                        @if (item.TrangThai == "HoatDong")
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-warning mt-1"
                                                    onclick="changeStatus('@item.MaNCC', 'TamNgung')" title="Tạm ngừng">
                                                <i class="fas fa-pause"></i>
                                            </button>
                                        }
                                        else if (item.TrangThai == "TamNgung")
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-success mt-1"
                                                    onclick="changeStatus('@item.MaNCC', 'HoatDong')" title="Kích hoạt">
                                                <i class="fas fa-play"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Không tìm thấy nhà cung cấp nào</p>
                    <a href="javascript:void(0)" onclick="loadThuocContent('/Admin/NhaCungCap/Create')" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm nhà cung cấp đầu tiên
                    </a>
                </div>
            }
        </div>

        @if (Model.Any())
        {
            <div class="card-footer bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">
                        Tổng số: <strong>@Model.Count()</strong> nhà cung cấp
                    </span>
                    <div>
                        <span class="badge bg-success me-2">
                            <i class="fas fa-check-circle"></i>
                            Hoạt động: @Model.Count(x => x.TrangThai == "HoatDong")
                        </span>
                        <span class="badge bg-warning text-dark me-2">
                            <i class="fas fa-pause-circle"></i>
                            Tạm ngừng: @Model.Count(x => x.TrangThai == "TamNgung")
                        </span>
                        <span class="badge bg-danger">
                            <i class="fas fa-times-circle"></i>
                            Ngừng: @Model.Count(x => x.TrangThai == "NgungHopTac")
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Xử lý submit form filter qua AJAX
            $('#filterForm').on('submit', function(e) {
                e.preventDefault();
                var url = $(this).attr('action') + '?' + $(this).serialize();
                loadThuocContent(url);
            });
        });

        // Hàm thay đổi trạng thái
        function changeStatus(maNCC, status) {
            var statusText = status === 'HoatDong' ? 'Kích hoạt' : 'Tạm ngừng';

            if (confirm(`Bạn có chắc muốn ${statusText} nhà cung cấp này?`)) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("ChangeStatus", "NhaCungCap")';

                var tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = $('input[name="__RequestVerificationToken"]').val() || '@Html.AntiForgeryToken()'.match(/value="([^"]+)"/)?.[1];
                form.appendChild(tokenInput);

                var idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = maNCC;
                form.appendChild(idInput);

                var statusInput = document.createElement('input');
                statusInput.type = 'hidden';
                statusInput.name = 'status';
                statusInput.value = status;
                form.appendChild(statusInput);

                document.body.appendChild(form);

                fetch(form.action, {
                    method: 'POST',
                    body: new FormData(form),
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        // Reload lại danh sách
                        loadThuocContent('/Admin/NhaCungCap/Index');
                    } else {
                        alert('Lỗi: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Có lỗi xảy ra: ' + error);
                })
                .finally(() => {
                    document.body.removeChild(form);
                });
            }
        }

        // Auto-dismiss alerts sau 5 giây
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
