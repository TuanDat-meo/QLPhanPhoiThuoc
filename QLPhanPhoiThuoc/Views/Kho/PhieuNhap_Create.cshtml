@model QLPhanPhoiThuoc.Models.Entities.PhieuNhap

<style>
    .form-container {
        padding: 30px;
        background: #f8f9fa;
    }

    .form-card {
        background: white;
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .form-section-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: #1e3a5f;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e9ecef;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
            font-size: 0.95rem;
        }

            .form-group label .required {
                color: #dc2626;
            }

        .form-group input,
        .form-group select,
        .form-group textarea {
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

            .form-group input:focus,
            .form-group select:focus,
            .form-group textarea:focus {
                outline: none;
                border-color: #1e3a5f;
                box-shadow: 0 0 0 3px rgba(30, 58, 95, 0.1);
            }

        .form-group textarea {
            resize: vertical;
            min-height: 80px;
        }

    .medicine-list-section {
        background: white;
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .add-medicine-btn {
        padding: 10px 20px;
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        margin-bottom: 20px;
    }

        .add-medicine-btn:hover {
            background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
            transform: translateY(-2px);
        }

    .medicine-items {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .medicine-item {
        background: #f8f9fa;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 20px;
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr 1fr auto;
        gap: 15px;
        align-items: end;
        transition: all 0.3s ease;
    }

        .medicine-item:hover {
            border-color: #1e3a5f;
            box-shadow: 0 2px 8px rgba(30, 58, 95, 0.15);
        }

    .remove-medicine-btn {
        padding: 10px;
        background: #fee2e2;
        color: #dc2626;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
    }

        .remove-medicine-btn:hover {
            background: #dc2626;
            color: white;
        }

    .total-section {
        background: linear-gradient(135deg, #1e3a5f 0%, #0f2847 100%);
        color: white;
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 20px;
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid rgba(255,255,255,0.2);
    }

        .total-row:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
            font-size: 1.3rem;
            font-weight: 700;
        }

    .total-label {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .total-value {
        font-size: 1.5rem;
        font-weight: 700;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        padding: 20px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .btn-submit {
        padding: 12px 30px;
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-submit:hover {
            background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(34, 197, 94, 0.4);
        }

    .btn-cancel {
        padding: 12px 30px;
        background: #6c757d;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

    .error-message {
        color: #dc2626;
        font-size: 0.85rem;
        margin-top: 5px;
        display: none;
    }

    .form-group.error input,
    .form-group.error select {
        border-color: #dc2626;
    }

    .form-group.error .error-message {
        display: block;
    }
</style>

<form id="phieuNhapForm">
    <div class="form-container">
        <div class="form-card">
            <div class="form-section-title">
                <i class="fas fa-info-circle"></i>
                Thông tin phiếu nhập
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Mã phiếu nhập <span class="required">*</span></label>
                    <input type="text" name="MaPhieuNhap" id="maPhieuNhap" value="PN@(DateTime.Now.ToString("yyyyMMddHHmmss"))" readonly />
                </div>

                <div class="form-group">
                    <label>Nhà cung cấp <span class="required">*</span></label>
                    <select name="MaNCC" id="maNCC" required>
                        <option value="">-- Chọn nhà cung cấp --</option>
                    </select>
                    <span class="error-message">Vui lòng chọn nhà cung cấp</span>
                </div>

                <div class="form-group">
                    <label>Kho nhập <span class="required">*</span></label>
                    <select name="MaKho" id="maKho" required>
                        <option value="">-- Chọn kho --</option>
                    </select>
                    <span class="error-message">Vui lòng chọn kho</span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Ngày nhập <span class="required">*</span></label>
                    <input type="datetime-local" name="NgayNhap" id="ngayNhap" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
                </div>

                <div class="form-group">
                    <label>Số hóa đơn</label>
                    <input type="text" name="SoHoaDon" id="soHoaDon" placeholder="Nhập số hóa đơn..." />
                </div>

                <div class="form-group">
                    <label>Nhân viên nhập</label>
                    <input type="text" name="NhanVienNhap" id="nhanVienNhap" value="@ViewBag.MaNhanVien" readonly style="background-color: #e9ecef;" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group" style="grid-column: 1 / -1;">
                    <label>Ghi chú</label>
                    <textarea name="GhiChu" id="ghiChu" placeholder="Nhập ghi chú..."></textarea>
                </div>
            </div>
        </div>

        <div class="medicine-list-section">
            <div class="form-section-title">
                <i class="fas fa-pills"></i>
                Danh sách thuốc nhập
            </div>

            <button type="button" class="add-medicine-btn" onclick="addMedicineRow()">
                <i class="fas fa-plus"></i>
                Thêm thuốc
            </button>

            <div class="medicine-items" id="medicineItems">
            </div>
        </div>

        <div class="total-section">
            <div class="total-row">
                <span class="total-label">Tổng số lượng:</span>
                <span class="total-value" id="totalQuantity">0</span>
            </div>
            <div class="total-row">
                <span class="total-label">Tổng tiền:</span>
                <span class="total-value" id="totalAmount">0 ₫</span>
            </div>
        </div>

        <div class="form-actions">
            <button type="button" class="btn-cancel" onclick="closePanel(currentPanelLevel)">
                <i class="fas fa-times"></i> Hủy
            </button>
            <button type="submit" class="btn-submit">
                <i class="fas fa-save"></i> Lưu phiếu nhập
            </button>
        </div>
    </div>
</form>

<script>
    let medicineCounter = 0;
    let globalThuocList = []; // Danh sách thuốc toàn cục

    $(document).ready(function () {
        console.log('Bắt đầu load dữ liệu...');

        // Load tất cả dữ liệu song song, không phụ thuộc nhau
        loadNhaCungCap();
        loadKho();
        loadThuocList();

        // Tự động thêm 1 dòng thuốc đầu tiên
        setTimeout(function() {
            addMedicineRow();
        }, 500);
    });

    // Hàm load danh sách nhà cung cấp
    function loadNhaCungCap() {
        $.ajax({
            url: '/Admin/PhieuNhap/GetNhaCungCap',
            method: 'GET',
            success: function (data) {
                console.log('Đã load nhà cung cấp:', data);
                const select = $('#maNCC');
                select.empty().append('<option value="">-- Chọn nhà cung cấp --</option>');
                data.forEach(item => {
                    select.append(`<option value="${item.maNCC}">${item.tenNCC}</option>`);
                });
            },
            error: function(xhr, status, error) {
                console.error('Lỗi load nhà cung cấp:', error);
                alert('Không thể tải danh sách nhà cung cấp!');
            }
        });
    }

    // Hàm load danh sách kho
    function loadKho() {
        $.ajax({
            url: '/Admin/PhieuNhap/GetKho',
            method: 'GET',
            success: function (data) {
                console.log('Đã load kho:', data);
                const select = $('#maKho');
                select.empty().append('<option value="">-- Chọn kho --</option>');
                data.forEach(item => {
                    select.append(`<option value="${item.maKho}">${item.tenKho}</option>`);
                });
            },
            error: function(xhr, status, error) {
                console.error('Lỗi load kho:', error);
                alert('Không thể tải danh sách kho!');
            }
        });
    }

    // Hàm load danh sách thuốc vào bộ nhớ toàn cục
    function loadThuocList() {
        $.ajax({
            url: '/Admin/PhieuNhap/GetThuoc',
            method: 'GET',
            success: function (data) {
                console.log('Đã load thuốc:', data);
                globalThuocList = data;
            },
            error: function(xhr, status, error) {
                console.error('Lỗi load thuốc:', error);
                alert('Không thể tải danh sách thuốc!');
            }
        });
    }

    // Hàm thêm dòng thuốc mới
    function addMedicineRow() {
        medicineCounter++;

        // Tạo options từ danh sách thuốc toàn cục
        let optionsHtml = '<option value="">-- Chọn thuốc --</option>';
        globalThuocList.forEach(t => {
            optionsHtml += `<option value="${t.maThuoc}" data-donvitinh="${t.donViTinh}" data-gianhap="${t.giaNhap}">${t.tenThuoc}</option>`;
        });

        const row = `<div class="medicine-item" data-id="${medicineCounter}">
            <div class="form-group">
                <label>Thuốc <span class="required">*</span></label>
                <select name="medicines[${medicineCounter}].MaThuoc" class="medicine-select" onchange="updateMedicineInfo(${medicineCounter})" required>
                    ${optionsHtml}
                </select>
            </div>
            <div class="form-group">
                <label>Số lô <span class="required">*</span></label>
                <input type="text" name="medicines[${medicineCounter}].SoLo" class="solo-input" placeholder="Số lô..." required />
            </div>
            <div class="form-group">
                <label>Số lượng <span class="required">*</span></label>
                <input type="number" name="medicines[${medicineCounter}].SoLuong" class="quantity-input" min="1" placeholder="0" onchange="calculateTotal()" required />
            </div>
            <div class="form-group">
                <label>Đơn giá <span class="required">*</span></label>
                <input type="number" name="medicines[${medicineCounter}].DonGia" class="price-input" min="0" placeholder="0" onchange="calculateTotal()" required />
            </div>
            <div class="form-group">
                <label>Hạn sử dụng <span class="required">*</span></label>
                <input type="date" name="medicines[${medicineCounter}].HanSuDung" required />
            </div>
            <button type="button" class="remove-medicine-btn" onclick="removeMedicineRow(${medicineCounter})">
                <i class="fas fa-trash"></i>
            </button>
        </div>`;

        $('#medicineItems').append(row);
    }

    // Hàm xóa dòng thuốc
    function removeMedicineRow(id) {
        $(`.medicine-item[data-id="${id}"]`).remove();
        calculateTotal();
    }

    // Hàm cập nhật thông tin thuốc khi chọn
    function updateMedicineInfo(id) {
        const row = $(`.medicine-item[data-id="${id}"]`);
        const selectedOption = row.find('.medicine-select option:selected');

        const giaNhap = selectedOption.data('gianhap') || 0;
        row.find('.price-input').val(giaNhap);

        calculateTotal();
    }

    // Hàm tính tổng
    function calculateTotal() {
        let totalQty = 0;
        let totalAmount = 0;

        $('.medicine-item').each(function () {
            const qty = parseInt($(this).find('.quantity-input').val()) || 0;
            const price = parseInt($(this).find('.price-input').val()) || 0;

            totalQty += qty;
            totalAmount += qty * price;
        });

        $('#totalQuantity').text(totalQty);
        $('#totalAmount').text(totalAmount.toLocaleString('vi-VN') + ' ₫');
    }

    // Xử lý submit form
    $('#phieuNhapForm').on('submit', function (e) {
        e.preventDefault();

        let isValid = true;
        $('.form-group').removeClass('error');

        // Validate nhà cung cấp
        if (!$('#maNCC').val()) {
            $('#maNCC').closest('.form-group').addClass('error');
            isValid = false;
        }

        // Validate kho
        if (!$('#maKho').val()) {
            $('#maKho').closest('.form-group').addClass('error');
            isValid = false;
        }

        // Validate danh sách thuốc
        if ($('.medicine-item').length === 0) {
            alert('Vui lòng thêm ít nhất một thuốc!');
            isValid = false;
        }

        if (!isValid) return;

        // Tạo dữ liệu gửi lên server
        const formData = {
            maPhieuNhap: $('#maPhieuNhap').val(),
            maNCC: $('#maNCC').val(),
            maKho: $('#maKho').val(),
            ngayNhap: $('#ngayNhap').val(),
            soHoaDon: $('#soHoaDon').val(),
            nhanVienNhap: $('#nhanVienNhap').val(),
            ghiChu: $('#ghiChu').val(),
            chiTiet: []
        };

        // Lấy danh sách thuốc
        $('.medicine-item').each(function () {
            const item = {
                maThuoc: $(this).find('.medicine-select').val(),
                soLo: $(this).find('.solo-input').val(),
                soLuong: parseInt($(this).find('.quantity-input').val()),
                donGia: parseInt($(this).find('.price-input').val()),
                hanSuDung: $(this).find('input[type="date"]').val()
            };
            formData.chiTiet.push(item);
        });

        console.log('Dữ liệu gửi đi:', formData);

        // Gửi request tạo phiếu nhập
        $.ajax({
            url: '/Admin/PhieuNhap/Create',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function (response) {
                if (response.success) {
                    alert('Tạo phiếu nhập thành công!');
                    if (typeof closePanel === 'function') {
                        closePanel(currentPanelLevel);
                    }
                    location.reload();
                } else {
                    alert('Lỗi: ' + response.message);
                }
            },
            error: function (xhr) {
                console.error('Lỗi:', xhr);
                alert('Lỗi khi tạo phiếu nhập!');
            }
        });
    });
</script>
