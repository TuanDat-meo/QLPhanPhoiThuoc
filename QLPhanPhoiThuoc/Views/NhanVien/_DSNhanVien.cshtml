@model IEnumerable<QLPhanPhoiThuoc.Models.Entities.NhanVien>

<div class="medicine-table-card animate-fadeIn">
    <div class="p-3 bg-light border-bottom d-flex justify-content-between align-items-center">
        <div class="search-box w-50">
            <form id="empSearchForm" onsubmit="searchEmployees(); return false;">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" id="empSearch" class="form-control border-start-0 ps-0" 
                           placeholder="Tìm tên, mã hoặc SĐT..." value="@ViewBag.Search">
                    <button class="btn btn-primary" type="button" onclick="searchEmployees()">Tìm</button>
                </div>
            </form>
        </div>

        <button class="btn-add" onclick="loadEmployeeContent('/Admin/NhanVien/Create')">
            <i class="fas fa-plus"></i> Thêm mới
        </button>
    </div>

    <table class="medicine-table">
        <thead>
            <tr>
                <th class="ps-4">Mã NV</th>
                <th>Họ tên</th>
                <th>Chức vụ</th>
                <th>Khoa/Phòng</th>
                <th>Số điện thoại</th>
                <th>Trạng thái</th>
                <th class="text-end pe-4">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td class="ps-4 fw-bold text-primary">@item.MaNhanVien</td>
                        <td>
                            <div class="d-flex align-items-center">
                            @{
                                // Logic lấy ảnh an toàn:
                                // 1. Ưu tiên ảnh từ Tài khoản (nếu có tài khoản và có avatar)
                                // 2. Nếu không, lấy ảnh từ bảng Nhân viên (HinhAnh)
                                // 3. Cuối cùng dùng ảnh mặc định
                                string avatar = "/images/default-avatar.png";

                                if (item.TaiKhoan != null && !string.IsNullOrEmpty(item.TaiKhoan.Avatar))
                                {
                                    avatar = item.TaiKhoan.Avatar;
                                }
                            }
                                <img src="@avatar" class="rounded-circle me-2 border" 
                                             width="35" height="35" style="object-fit: cover;">
                                <div>
                                    <div class="fw-bold">@item.TenNhanVien</div>
                                    <div class="small text-muted">@item.Email</div>
                                </div>
                            </div>
                        </td>
                        <td><span class="badge bg-light text-dark border">@item.ChucVu</span></td>
                        <td>@(item.KhoaPhong?.TenKhoa ?? "---")</td>
                        <td>@item.SoDienThoai</td>
                        <td>
                        @if (item.TrangThai == "DangLamViec")
                        {
                                    <span class="badge badge-success">Đang làm việc</span>
                        }
                        else
                        {
                                    <span class="badge badge-danger">Đã nghỉ</span>
                        }
                        </td>
                        <td class="text-end pe-4">
                            <button class="btn-action btn-view" title="Xem chi tiết" onclick="viewEmpDetail('@item.MaNhanVien')">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="btn-action btn-edit" title="Chỉnh sửa" onclick="editEmployee('@item.MaNhanVien')">
                                <i class="fas fa-edit"></i>
                            </button>
                        </td>
                    </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="commonModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white" style="background: linear-gradient(135deg, #1e3a5f 0%, #0f2847 100%);">
                <h5 class="modal-title" id="commonModalTitle">Thông tin</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-0" id="commonModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <div class="p-3 border-top d-flex justify-content-between align-items-center bg-light">
        <div class="small text-muted">
            Hiển thị trang @ViewBag.CurrentPage / @ViewBag.TotalPages
        </div>
        <nav>
            <ul class="pagination pagination-sm m-0">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadEmployeeContent('/Admin/NhanVien/_DSNhanVien?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.Search')">Trước</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link" href="javascript:void(0)" onclick="loadEmployeeContent('/Admin/NhanVien/_DSNhanVien?page=@i&search=@ViewBag.Search')">@i</a>
                        </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadEmployeeContent('/Admin/NhanVien/_DSNhanVien?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.Search')">Sau</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<script>
    function searchEmployees() {
        const val = $('#empSearch').val();
        // Gọi lại hàm load nội dung với tham số search
        loadEmployeeContent('/Admin/NhanVien/_DSNhanVien?search=' + encodeURIComponent(val));
    }

    // Hàm xem chi tiết (Mở Modal)
    function viewEmpDetail(id) {
        // Gọi AJAX lấy PartialView chi tiết
        $.get('/Admin/NhanVien/Details/' + id, function(data) {
            $('#commonModalBody').html(data);
            $('#commonModalTitle').html('<i class="fas fa-user-circle me-2"></i>Hồ sơ nhân viên');
            // Mở modal chung (Common Modal đã có ở Layout/AdminIndex)
            new bootstrap.Modal(document.getElementById('commonModal')).show();
        }).fail(function() {
            showToast('Lỗi tải thông tin nhân viên', 'error');
        });
    }

    // Hàm mở form sửa (Mở Modal)
    function editEmployee(id) {
        // Gọi AJAX lấy PartialView form sửa
        $.get('/Admin/NhanVien/Edit/' + id, function(data) {
            $('#commonModalBody').html(data);
            $('#commonModalTitle').html('<i class="fas fa-user-edit me-2"></i>Chỉnh sửa nhân viên');
            new bootstrap.Modal(document.getElementById('commonModal')).show();
        }).fail(function() {
            showToast('Lỗi tải form chỉnh sửa', 'error');
        });
    }
</script>