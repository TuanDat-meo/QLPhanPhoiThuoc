@section Scripts {
    <script>
        $(document).ready(function() {
            // Smooth scroll for all anchor links
            $('a[href^="#"]').on('click', function(e) {
                e.preventDefault();
                var target = $(this).attr('href');
                if ($(target).length) {
                    $('html, body').animate({
                        scrollTop: $(target).offset().top - 100
                    }, 600);
                }
            });

            // Animate stats on scroll
            function animateStats() {
                $('.stat-box').each(function(index) {
                    $(this).css({
                        'opacity': '0',
                        'transform': 'translateY(30px)'
                    }).delay(index * 100).animate({
                        opacity: 1
                    }, 600, function() {
                        $(this).css('transform', 'translateY(0)');
                    });
                });
            }

            // Trigger animation on page load
            setTimeout(animateStats, 200);

            // Feature cards hover effect
            $('.feature-card').hover(
                function() {
                    $(this).find('.feature-icon').css('transform', 'scale(1.1) rotate(5deg)');
                },
                function() {
                    $(this).find('.feature-icon').css('transform', 'scale(1) rotate(0deg)');
                }
            );

            // Timeline item animation on scroll
            $(window).on('scroll', function() {
                $('.timeline-item').each(function() {
                    var itemTop = $(this).offset().top;
                    var windowBottom = $(window).scrollTop() + $(window).height();
                    
                    if (itemTop < windowBottom - 100) {
                        $(this).css({
                            'opacity': '1',
                            'transform': 'translateX(0)'
                        });
                    }
                });
            });

            // Initial state for timeline items
            $('.timeline-item').css({
                'opacity': '0',
                'transform': 'translateX(-30px)',
                'transition': 'all 0.6s ease'
            });
        });
    </script>
}
